    <script>
      // Hàm fix định dạng số (dùng luôn của mã đề tài dự án)
      function fixNumberFormat(text) {
        if (typeof text !== "string") return text;
        return text.replace(/(\d),(\d{2})/g, "$1.$2");
      }

      // Hàm format để định dạng ngày từ ISO 8601
      function formatDate(dateString) {
        const date = new Date(dateString);
        const day = String(date.getDate()).padStart(2, '0');
        const month = String(date.getMonth() + 1).padStart(2, '0');
        const year = date.getFullYear();
        return `${day}/${month}/${year}`;
      }

      // Hàm format giờ
      function formatHours(text) {
        if (typeof text !== "string") {
          return text;
        }
        const match = text.match(/(\d+[\.,]?\d*)\s*giờ/);
        if (match) {
          const hours = parseFloat(match[1].replace(",", "."));
          const formattedHours = hours.toFixed(2);
          return text.replace(match[1], formattedHours.replace(".", ","));
        }
        return text;
      }

      // Hàm chuyển đổi định dạng ngày từ DMY sang ISO (YYYY-MM-DDTHH:mm:ss.sssZ)
      function convertDMYtoISO(dateString) {
        const parts = dateString.split("/");
        if (parts.length !== 3) return null;
        const [day, month, year] = parts.map(Number);
        if (isNaN(day) || isNaN(month) || isNaN(year)) return null;
        const date = new Date(Date.UTC(year, month - 1, day, 0, 0, 0));
        return date.toISOString();
      }

      // Hàm render table
      function renderTable(data) {
        console.log("Dữ liệu trước khi render:", data);
        const tbody = document.getElementById('table-body');
        window.currentData = data; // Lưu dữ liệu hiện tại để sử dụng khi hủy
        tbody.innerHTML = '';

        data.forEach(item => {
          const newItem = { ...item };
          // Sửa lỗi định dạng số cho các trường liên quan nếu cần
          newItem.DanhSachThanhVien = fixNumberFormat(newItem.DanhSachThanhVien);
          newItem.SoQDGiaoNhiemVu = fixNumberFormat(newItem.SoQDGiaoNhiemVu);
          newItem.SoTC = fixNumberFormat(newItem.SoTC);

          const row = createTableRow(newItem);
          tbody.appendChild(row);
        });
        console.log("Dữ liệu sau khi sửa:", window.currentData);
      }

      // Hàm tạo một hàng cho bảng
      function createTableRow(item) {
        const row = document.createElement('tr');
        row.setAttribute('data-id', item.ID || '');

        function createCell(value) {
          const cell = document.createElement('td');
          cell.textContent = value;
          return cell;
        }

        row.appendChild(createCell(item.HinhThucXayDung));
        row.appendChild(createCell(item.TenChuongTrinh));
        row.appendChild(createCell(item.SoTC));
        row.appendChild(createCell(item.SoQDGiaoNhiemVu));
        row.appendChild(createCell(formatDate(item.NgayQDGiaoNhiemVu)));
        row.appendChild(createCell(
          item.DanhSachThanhVien
            .split(',')
            .map(member => formatHours(member.trim()))
            .join(', ')
        ));

        // Tạo nút Sửa
        const editButton = document.createElement('button');
        editButton.classList.add('btn', 'btn-edit');
        editButton.textContent = 'Sửa';
        editButton.addEventListener('click', () => enableEditMode(row, item));

        const actionCell = document.createElement('td');
        actionCell.appendChild(editButton);
        row.appendChild(actionCell);

        return row;
      }

      // Hàm chuyển sang chế độ chỉnh sửa cho hàng được chọn
      function enableEditMode(row, item) {
        const id = row.getAttribute('data-id');
        const originalRow = row.cloneNode(true); // Lưu lại dòng gốc để khôi phục khi hủy
        row.innerHTML = '';

        function createEditableCell(value, className) {
          const cell = document.createElement('td');
          const input = document.createElement('input');
          input.type = 'text';
          input.value = value;
          input.className = className;
          cell.appendChild(input);
          return cell;
        }

        row.appendChild(createEditableCell(item.HinhThucXayDung, `hinh-thuc-${id}`));
        row.appendChild(createEditableCell(item.TenChuongTrinh, `ten-chuong-trinh-${id}`));
        row.appendChild(createEditableCell(item.SoTC, `so-tc-${id}`));
        row.appendChild(createEditableCell(item.SoQDGiaoNhiemVu, `so-qd-${id}`));
        row.appendChild(createEditableCell(formatDate(item.NgayQDGiaoNhiemVu), `ngay-qd-${id}`));
        row.appendChild(createEditableCell(
          item.DanhSachThanhVien
            .split(',')
            .map(member => formatHours(member.trim()))
            .join(', '),
          `danh-sach-thanh-vien-${id}`
        ));

        // Tạo nút Lưu
        const saveButton = document.createElement('button');
        saveButton.textContent = 'Lưu';
        saveButton.classList.add('btn', 'btn-save');
        saveButton.addEventListener('click', () => saveData(id));

        // Tạo nút Hủy
        const cancelButton = document.createElement('button');
        cancelButton.textContent = 'Hủy';
        cancelButton.classList.add('btn', 'btn-cancel');
        cancelButton.addEventListener('click', () => {
          row.replaceWith(createTableRow(item));
        });

        const actionCell = document.createElement('td');
        actionCell.appendChild(saveButton);
        actionCell.appendChild(cancelButton);
        row.appendChild(actionCell);
      }

      // Hàm lưu dữ liệu sau khi chỉnh sửa
      function saveData(id) {
        const MaBang = 'xaydungctdt';
        const NgayQDGiaoNhiemVu = document.querySelector(`.ngay-qd-${id}`).value;
        const NgayQDGiaoNhiemVuValid = convertDMYtoISO(NgayQDGiaoNhiemVu);

        const updatedData = {
          HinhThucXayDung: document.querySelector(`.hinh-thuc-${id}`).value,
          TenChuongTrinh: document.querySelector(`.ten-chuong-trinh-${id}`).value,
          SoTC: document.querySelector(`.so-tc-${id}`).value,
          SoQDGiaoNhiemVu: document.querySelector(`.so-qd-${id}`).value,
          NgayQDGiaoNhiemVu: NgayQDGiaoNhiemVuValid,
          DanhSachThanhVien: document.querySelector(`.danh-sach-thanh-vien-${id}`).value
        };

        console.log(updatedData);

        fetch(`/nckh/edit/${id}/${MaBang}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(updatedData)
        })
          .then(response => response.json())
          .then(data => {
            alert('Dữ liệu đã được cập nhật thành công!');
            // Có thể gọi lại renderTable(window.currentData) để cập nhật bảng sau chỉnh sửa
          })
          .catch(error => console.error('Lỗi khi cập nhật dữ liệu:', error));
      }

      // Hàm lấy dữ liệu từ server và hiển thị bảng
      async function getData() {
        const year = document.getElementById('namHocXem').value;
        const department = document.getElementById('MaPhongBanView').value;
        const url = `/xaydungctdt/${year}/${department}`;

        try {
          fetch(url)
            .then(response => response.json())
            .then(data => {
              console.log(data);
              renderTable(data);
            })
            .catch(error => {
              console.error('Lỗi khi lấy dữ liệu:', error);
            });
        } catch (error) {
          console.error('Lỗi trong quá trình gửi yêu cầu:', error);
        }
      }
    </script>


