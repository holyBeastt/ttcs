<script>
  document.addEventListener("DOMContentLoaded", async () => {
    const cachedCount = localStorage.getItem("waiting_list_count");

    if (cachedCount) updateBadge(cachedCount);

    try {
      const response = await fetch("/api/gvm/waiting-list/unapproved");
      if (!response.ok) throw new Error("Lỗi khi lấy dữ liệu");

      const count = await response.json();

      localStorage.setItem("waiting_list_count", count);
      updateBadge(count);
    } catch (error) {
      console.error("Không thể cập nhật thông báo:", error);
    }
  });

  function updateBadge(count) {
    const gvmBadge = document.getElementById("gvm-badge");
    const waitingBadge = document.getElementById("waiting-list-badge");

    if (count > 0) {
      gvmBadge.textContent = count;
      gvmBadge.style.display = "inline-block";

      waitingBadge.textContent = count;
      waitingBadge.style.display = "inline-block";
    } else {
      gvmBadge.style.display = "none";
      waitingBadge.style.display = "none";
    }
  }
</script>

