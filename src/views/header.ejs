<script>
  document.addEventListener("DOMContentLoaded", () => {
    const isKhoa = localStorage.getItem("isKhoa");

    // Thêm sự kiện cho phần tử có id="ThongTinGD"
    const ThongTinGD = document.getElementById("ThongTinGD");
    // Thêm sự kiện cho phần tử có id="Home"
    const Home = document.getElementById("Home");

    if (isKhoa == 0) {
      ThongTinGD.href = "/info2";
      Home.href = "/maindt";
    } else if (isKhoa == 1) {
      ThongTinGD.href = "/info";
      Home.href = "/mainkhoa";
    }
  });

  // Hàm xử lý trạng thái active
  document.addEventListener("DOMContentLoaded", function() {
    // Lấy đường dẫn hiện tại
    const currentPath = window.location.pathname;

    // Lấy tất cả các liên kết trong navbar
    const navLinks = document.querySelectorAll(".navbar-nav .nav-link");

    // Xử lý active cho liên kết trong navbar
    navLinks.forEach((link) => {
      if (link.getAttribute("href") === currentPath) {
        link.classList.add("active");
      }
    });

    // Xử lý dropdown: nếu một liên kết bên trong dropdown được active, dropdown đó cũng được active
    const dropdowns = document.querySelectorAll(".nav-item.dropdown");
    dropdowns.forEach((dropdown) => {
      const activeLink = dropdown.querySelector(".nav-link.active");
      if (activeLink) {
        const parentToggle = dropdown.querySelector(".dropdown-toggle");
        if (parentToggle) {
          parentToggle.classList.add("active");
        }
      }
    });

    // Xử lý dropdown con: nếu liên kết con được active, dropdown cha của nó cũng phải active
    const subDropdowns = document.querySelectorAll(".dropdown-submenu");
    subDropdowns.forEach((submenu) => {
      const activeSubLink = submenu.querySelector(".nav-link.active");
      if (activeSubLink) {
        const parentToggle = submenu.querySelector(".dropdown-toggle");
        if (parentToggle) {
          parentToggle.classList.add("active");
        }
      }
    });
  });

  // Phần phân quyền
  document.addEventListener("DOMContentLoaded", function() {
    const isKhoa = localStorage.getItem("isKhoa");
    const role = localStorage.getItem("userRole");
    const MaPhongBan = localStorage.getItem("MaPhongBan");

    if (isKhoa === null) {
      console.log("Không tìm thấy giá trị isKhoa trong localStorage");
    } else {
      const addNewFileGvm = document.getElementById("addNewFileGvm");
      const actionButton3 = document.getElementById("actionButton3");
      const actionButtonBackup = document.getElementById("backup-btn");
      const navTaoSoHopDong = document.getElementById("nav-tao-so-hop-dong");

      if (isKhoa === "0" || role === APP_ROLES.gv) {
        addNewFileGvm.style.display = "none"; // Ẩn addNewFileGvm nếu isKhoa = 0
      }

      // Ẩn "Đào tạo - Tạo số hợp đồng" nếu không phải role "<%= APP_ROLES.troLy_phong %>" và MaPhongBan "<%= APP_DEPARTMENTS.daoTao %>"
      if ((role === APP_ROLES.troLy_phong || role === APP_ROLES.lanhDao_phong) && MaPhongBan === APP_DEPARTMENTS.daoTao) {
        navTaoSoHopDong.style.display = "block";
      } else {
        navTaoSoHopDong.style.display = "none";
      }

      // Ẩn button import đồ án
      const themFile = document.querySelector(".themFile");
      const suaHD = document.getElementById("suaHD");
      //const tkb = document.getElementById("tkb-nav");
      const addNewTKB = document.getElementById("add-new-tkb");

      // Chỉ đào tạo (duyệt) được quyền thao tác với thêm TKB, thêm file và sửa hợp đồng
      if ((role == APP_ROLES.troLy_phong || role == APP_ROLES.lanhDao_phong) && MaPhongBan == APP_DEPARTMENTS.daoTao) {
        themFile.style.display = "block";
        suaHD.style.display = "block";
        addNewTKB.style.display = "block";
      }

      if (
        role === APP_ROLES.lanhDao_khoa ||
        (MaPhongBan === APP_DEPARTMENTS.daoTao && (role === APP_ROLES.troLy_phong || role === APP_ROLES.lanhDao_phong))
      ) {
        actionButton3.style.display = "";
      } else {
        actionButton3.style.display = "none";
      }
      if (MaPhongBan === APP_DEPARTMENTS.daoTao && (role === APP_ROLES.troLy_phong || role === APP_ROLES.lanhDao_phong)) {
        actionButtonBackup.style.display = "";
      } else {
        actionButtonBackup.style.display = "none";
      }
    }
    const TenNhanVien = localStorage.getItem("TenNhanVien"); // Lấy tên người dùng từ localStorage
    let Role = role;
    if (Role.toUpperCase() == APP_ROLES.lanhDao_khoa.toUpperCase()) {
      Role = "LĐK";
    }
    if (Role.toUpperCase() == APP_ROLES.lanhDao_phong.toUpperCase()) {
      Role = "LĐP";
    }
    if (TenNhanVien) {
      // Hiển thị tên người dùng trên phần tử HTML
