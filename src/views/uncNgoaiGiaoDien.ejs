<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Học Viện Kỹ Thuật Mật Mã - UNC ngoài - Giao diện</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">

  <!-- SweetAlert2 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.16/dist/sweetalert2.min.css" rel="stylesheet" />
  <!-- SweetAlert2 JavaScript -->
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.16/dist/sweetalert2.all.min.js"></script>

  <style>
    /* Thu nhỏ bảng xuống 80% và căn giữa */
    #unc-ngoai-table-wrapper {
      width: 80%;
      margin: 0 auto;
    }

    /* Căn giữa nội dung trong các ô bảng */
    #unc-ngoai-table-wrapper table td,
    #unc-ngoai-table-wrapper table th {
      text-align: center;
      vertical-align: middle;
    }

    /* Thu nhỏ nút trong ô thao tác */
    #unc-ngoai-table-wrapper .btn-group-sm .btn {
      padding: 0.15rem 0.3rem;
      font-size: 0.75rem;
      line-height: 1.2;
    }

    #unc-ngoai-table-wrapper .btn-group-sm .btn i {
      font-size: 0.7rem;
    }
  </style>
</head>

<body>
  <%- include('header') %>

  <div class="container-fluid my-4" style="padding-left: 20px">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-desktop me-2"></i>UNC ngoài - Thêm người thụ hưởng
        </h5>
      </div>
      <div class="card-body">
        <form id="unc-ngoai-form" class="row g-3">
          <div class="col-md-2">
            <label for="stt" class="form-label"><strong>STT</strong></label>
            <input type="number" class="form-control" id="stt" name="stt" value="<%= typeof nextStt !== 'undefined' ? nextStt : '' %>" readonly>
          </div>
          <div class="col-md-4">
            <label for="dvnt" class="form-label"><strong>Đơn vị nhận tiền</strong><span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="dvnt" name="dvnt" placeholder="Nhập đơn vị nhận tiền">
          </div>
          <div class="col-md-3">
            <label for="stk" class="form-label"><strong>Số tài khoản</strong><span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="stk" name="stk" placeholder="Nhập số tài khoản">
          </div>
          <div class="col-md-3">
            <label for="nganhang" class="form-label"><strong>Ngân hàng</strong><span class="text-danger">*</span></label>
            <input type="text" class="form-control" id="nganhang" name="nganhang" placeholder="Nhập tên ngân hàng">
          </div>

          <div class="col-12 mt-3 d-flex gap-2 align-items-center">
            <button type="button" id="btn-save-unc-ngoai" class="btn btn-sm btn-primary">
              <i class="fas fa-save me-1"></i>Lưu dòng
            </button>
            <button type="button" id="btn-view-unc-ngoai-list" class="btn btn-sm btn-outline-secondary">
              <i class="fas fa-list me-1"></i>Xem danh sách
            </button>
          </div>
        </form>

        <!-- Bảng danh sách UNC ngoài -->
        <div id="unc-ngoai-table-wrapper" class="mt-4" style="display: none;">
          <h6><i class="fas fa-table me-1"></i>Danh sách UNC ngoài</h6>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover">
              <thead class="table-light">
                <tr>
                  <th style="width: 60px;">STT</th>
                  <th>Đơn vị nhận tiền</th>
                  <th>Số tài khoản</th>
                  <th>Ngân hàng</th>
                  <th style="width: 110px;">Thao tác</th>
                </tr>
              </thead>
              <tbody id="unc-ngoai-table-body">
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      document.getElementById('btn-save-unc-ngoai').addEventListener('click', saveUNCNgoai);
      document.getElementById('btn-view-unc-ngoai-list').addEventListener('click', loadUNCNgoaiList);
    });

    function saveUNCNgoai() {
      const sttInput = document.getElementById('stt');
      const dvntInput = document.getElementById('dvnt');
      const stkInput = document.getElementById('stk');
      const nganhangInput = document.getElementById('nganhang');

      const dvnt = dvntInput.value.trim();
      const stk = stkInput.value.trim();
      const nganhang = nganhangInput.value.trim();

      if (!dvnt || !stk || !nganhang) {
        Swal.fire({
          title: 'Thông báo',
          text: 'Vui lòng nhập đầy đủ Đơn vị nhận tiền, Số tài khoản và Ngân hàng',
          icon: 'warning'
        });
        return;
      }

      fetch('/uy-nhiem-chi/unc-ngoai/nhap-du-lieu/giao-dien/api/create', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ dvnt, stk, nganhang })
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire({
              title: 'Thành công',
              text: data.message || 'Đã lưu dòng UNC ngoài thành công',
              icon: 'success'
            });

            // Tăng STT hiển thị lên 1 (chỉ trên form)
            const currentStt = parseInt(sttInput.value || '0', 10);
            sttInput.value = currentStt + 1;

            // Xóa nội dung các ô nhập
            dvntInput.value = '';
            stkInput.value = '';
            nganhangInput.value = '';
          } else {
            Swal.fire({
              title: 'Lỗi',
              text: data.message || 'Không thể lưu dữ liệu UNC ngoài',
              icon: 'error'
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            title: 'Lỗi',
            text: 'Có lỗi xảy ra khi lưu dữ liệu UNC ngoài',
            icon: 'error'
          });
        });
    }

    // Tải danh sách UNC ngoài và hiển thị bảng
    function loadUNCNgoaiList() {
      fetch('/uy-nhiem-chi/unc-ngoai/nhap-du-lieu/giao-dien/api/list')
        .then(response => response.json())
        .then(data => {
          if (!data.success) {
            throw new Error(data.message || 'Không thể tải danh sách UNC ngoài');
          }

          const tbody = document.getElementById('unc-ngoai-table-body');
          tbody.innerHTML = '';

          (data.data || []).forEach(row => {
            const tr = document.createElement('tr');
            tr.innerHTML = `
              <td>${row.stt}</td>
              <td class="cell-dvnt">${row.dvnt || ''}</td>
              <td class="cell-stk">${row.stk || ''}</td>
              <td class="cell-nganhang">${row.nganhang || ''}</td>
              <td>
                <div class="btn-group btn-group-sm" role="group">
                  <button type="button" class="btn btn-outline-warning" onclick="enterEditUNCNgoai(this, ${row.stt})" title="Sửa">
                    <i class="fas fa-edit"></i>
                  </button>
                  <button type="button" class="btn btn-outline-danger" onclick="deleteUNCNgoai(${row.stt})" title="Xóa">
                    <i class="fas fa-trash"></i>
                  </button>
                </div>
              </td>
            `;
            tbody.appendChild(tr);
          });

          document.getElementById('unc-ngoai-table-wrapper').style.display = 'block';
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            title: 'Lỗi',
            text: 'Có lỗi xảy ra khi tải danh sách UNC ngoài',
            icon: 'error'
          });
        });
    }

    // Sửa trực tiếp một dòng UNC ngoài ngay trên bảng
    function enterEditUNCNgoai(button, stt) {
      const row = button.closest('tr');
      const dvntCell = row.querySelector('.cell-dvnt');
      const stkCell = row.querySelector('.cell-stk');
      const nganhangCell = row.querySelector('.cell-nganhang');

      // Nếu đã ở chế độ edit thì bỏ qua
      if (row.classList.contains('editing')) return;
      row.classList.add('editing');

      const original = {
        dvnt: dvntCell.textContent.trim(),
        stk: stkCell.textContent.trim(),
        nganhang: nganhangCell.textContent.trim()
      };

      dvntCell.innerHTML = `<input class="form-control form-control-sm" value="${original.dvnt}">`;
      stkCell.innerHTML = `<input class="form-control form-control-sm" value="${original.stk}">`;
      nganhangCell.innerHTML = `<input class="form-control form-control-sm" value="${original.nganhang}">`;

      const actionCell = row.querySelector('td:last-child');
      actionCell.innerHTML = `
        <div class="btn-group btn-group-sm" role="group">
          <button type="button" class="btn btn-success" onclick="saveEditUNCNgoai(this, ${stt})" title="Lưu">
            <i class="fas fa-check"></i>
          </button>
          <button type="button" class="btn btn-outline-secondary" onclick="cancelEditUNCNgoai(this, ${stt}, '${original.dvnt.replace(/'/g, "\\'")}', '${original.stk.replace(/'/g, "\\'")}', '${original.nganhang.replace(/'/g, "\\'")}')" title="Hủy">
            <i class="fas fa-times"></i>
          </button>
        </div>
      `;
    }

    function saveEditUNCNgoai(button, stt) {
      const row = button.closest('tr');
      const dvntInput = row.querySelector('.cell-dvnt input');
      const stkInput = row.querySelector('.cell-stk input');
      const nganhangInput = row.querySelector('.cell-nganhang input');

      const dvnt = dvntInput.value.trim();
      const stk = stkInput.value.trim();
      const nganhang = nganhangInput.value.trim();

      if (!dvnt || !stk || !nganhang) {
        Swal.fire({
          title: 'Thông báo',
          text: 'Vui lòng nhập đầy đủ Đơn vị nhận tiền, Số tài khoản, Ngân hàng',
          icon: 'warning'
        });
        return;
      }

      fetch('/uy-nhiem-chi/unc-ngoai/nhap-du-lieu/giao-dien/api/update', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ stt, dvnt, stk, nganhang })
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire({
              title: 'Thành công',
              text: data.message || 'Đã cập nhật dòng UNC ngoài',
              icon: 'success'
            });
            loadUNCNgoaiList();
          } else {
            Swal.fire({
              title: 'Lỗi',
              text: data.message || 'Không thể cập nhật dòng UNC ngoài',
              icon: 'error'
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            title: 'Lỗi',
            text: 'Có lỗi xảy ra khi cập nhật dòng UNC ngoài',
            icon: 'error'
          });
        });
    }

    function cancelEditUNCNgoai(button, stt, dvnt, stk, nganhang) {
      const row = button.closest('tr');
      const dvntCell = row.querySelector('.cell-dvnt');
      const stkCell = row.querySelector('.cell-stk');
      const nganhangCell = row.querySelector('.cell-nganhang');
      const actionCell = row.querySelector('td:last-child');

      row.classList.remove('editing');

      dvntCell.textContent = dvnt || '';
      stkCell.textContent = stk || '';
      nganhangCell.textContent = nganhang || '';

      actionCell.innerHTML = `
        <div class="btn-group btn-group-sm" role="group">
          <button type="button" class="btn btn-outline-warning" onclick="enterEditUNCNgoai(this, ${stt})" title="Sửa">
            <i class="fas fa-edit"></i>
          </button>
          <button type="button" class="btn btn-outline-danger" onclick="deleteUNCNgoai(${stt})" title="Xóa">
            <i class="fas fa-trash"></i>
          </button>
        </div>
      `;
    }

    // Xóa một dòng UNC ngoài
    function deleteUNCNgoai(stt) {
      Swal.fire({
        title: `Xóa dòng STT ${stt}?`,
        text: 'Hành động này không thể hoàn tác.',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Xóa',
        cancelButtonText: 'Hủy'
      }).then(result => {
        if (!result.isConfirmed) return;

        fetch('/uy-nhiem-chi/unc-ngoai/nhap-du-lieu/giao-dien/api/delete', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ stt })
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              Swal.fire({
                title: 'Thành công',
                text: data.message || 'Đã xóa dòng UNC ngoài',
                icon: 'success'
              });
              loadUNCNgoaiList();
            } else {
              Swal.fire({
                title: 'Lỗi',
                text: data.message || 'Không thể xóa dòng UNC ngoài',
                icon: 'error'
              });
            }
          })
          .catch(error => {
            console.error('Error:', error);
            Swal.fire({
              title: 'Lỗi',
              text: 'Có lỗi xảy ra khi xóa dòng UNC ngoài',
              icon: 'error'
            });
          });
      });
    }
  </script>
</body>

</html>
