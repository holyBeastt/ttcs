    <script>
        async function fetchThongkemgData() {
            try {
                const response = await fetch('/api/thongkemg-data'); // Lấy dữ liệu từ API
                const data = await response.json(); // Chuyển dữ liệu thành JSON

                // Lấy tên giảng viên và số tiết
                const labels = data.map(item => item.hoten); // Lấy tên giảng viên
                const values = data.map(item => item.tongsotiet); // Lấy tổng số tiết

                // Vẽ biểu đồ với Chart.js
                const ctx = document.getElementById('thongkemgCanvas').getContext('2d');
                const chart = new Chart(ctx, {
                    type: 'bar', // Biểu đồ cột
                    data: {
                        labels: labels, // Nhãn (tên giảng viên)
                        datasets: [{
                            label: 'Số tiết mời giảng',
                            data: values, // Dữ liệu (số tiết)
                            backgroundColor: 'blue', // Màu nền của cột
                            borderColor: 'black', // Màu viền của cột
                            borderWidth: 1
                        }]
                    },
                    options: {
                        responsive: true, // Đảm bảo biểu đồ tự động thay đổi kích thước
                        scales: {
                            y: {
                                beginAtZero: true, // Bắt đầu trục y từ 0
                                ticks: {
                                    stepSize: 100 // Điều chỉnh bước nhảy của trục y
                                }
                            },
                            x: {
                                ticks: {
                                    font: {
                                        weight: 'bold', // Làm cho tên giảng viên đen đậm
                                        size: 14, // Kích thước font của tên giảng viên
                                    },
                                    maxRotation: 45, // Giảm góc quay của nhãn nếu cần
                                    minRotation: 0
                                }
                            }
                        },
                        elements: {
                            bar: {
                                // Chiều rộng cột khoảng 1cm (37.8px)
                                barThickness: 20
                            }
                        }
                    }
                });

                // Hiển thị bảng chi tiết giảng viên và số tiết
                const tableBody = document.getElementById('tableBody');
                data.forEach((item, index) => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${index + 1}</td>
                        <td>${item.hoten}</td>
                        <td>${item.tongsotiet}</td>
                    `;
                    tableBody.appendChild(row);
                });

            } catch (error) {
                console.error('Lỗi khi lấy dữ liệu:', error);
            }
        }

        // Gọi hàm khi trang được tải
        window.onload = fetchThongkemgData; 
    </script>
