    <!-- Bảng chi tiết số tiết của giảng viên -->
     <h3>Bảng chi tiết số tiết mời giảng</h3>
    <table class="table table-bordered my-2" border="1" id="thongkemgTable">
        <thead>
            <tr>
                <th>STT</th>
                <th>Họ tên</th>
