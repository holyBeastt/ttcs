                <label for="Deadline">Ngày hết hạn:</label>
                <input
                type="datetime-local"
                id="Deadline"
                name="Deadline"
                class="form-control"
                required
                />
            </div>
        </div>
        <button id="submit" type="submit" class="btn mt-3">Thêm thông báo</button>
        <button type="button" class="btn m-3" onclick="goBack()">
          Quay Lại
        </button>
      </form>
