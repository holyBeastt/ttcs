  <script>
// Function to fetch data for both the chart and the tables
async function fetchData() {
    const nam = document.getElementById('NamHoc').value; // Get selected year
    const khoa = document.getElementById('Khoa').value; // Get selected department
    const giangVien = document.getElementById('tenGiangVien').value.trim(); // Get lecturer name

    // Fetch statistics data for the chart
    try {
        const response = await fetch(`/statistics?namhoc=${nam}&khoa=${khoa}&giangvien=${encodeURIComponent(giangVien)}`);
        const data = await response.json();
        if (data.success) {
            const ctx = document.getElementById('myChart').getContext('2d');

            // Destroy existing chart if it exists
            if (window.myChart instanceof Chart) {
                window.myChart.destroy();
            }

            // Labels for the chart
            const chartLabels = [
                'Đề tài/Dự án',
                'Bài báo KH',
                'Bằng sáng chế/Giải thưởng',
                'Biên soạn giáo trình/bài giảng',
                'Xây dựng CTĐT',
                'NCKH và Huấn luyện đội tuyển',
                'Sách và Giáo trình',
                'Nhiệm vụ khoa học và CN'
            ];

            // Create a new chart
            window.myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: chartLabels,
                    datasets: [{
                        label: 'Số lượng',
                        data: data.data,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)',
                            'rgba(75, 192, 192, 0.2)',
                            'rgba(255, 159, 64, 0.2)',
                            'rgba(199, 199, 199, 0.2)',
                            'rgba(255, 99, 71, 0.2)',
                            'rgba(153, 102, 255, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(255, 159, 64, 1)',
                            'rgba(199, 199, 199, 1)',
                            'rgba(255, 99, 71, 1)',
                            'rgba(153, 102, 255, 1)'
                        ],
                        borderWidth: 4
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        title: {
                            display: true,
                            text: 'Biểu đồ thống kê tổng số hạng mục NCKH',
                            font: { size: 30 }
                        },
                        tooltip: {
                            enabled: true,
                            callbacks: {
                                label: function(context) {
                                    // Lấy chính xác tên và giá trị từ dữ liệu hiện tại
                                    const label = chartLabels[context.dataIndex];
                                    const value = context.raw;
                                    return `${label}: ${value}`;
                                }
                            }
                        }
                    },
                    scales: {
                        y: {
                            beginAtZero: true
                        },
                        x: {
                            ticks: {
                                align: 'right',
                            }
                        }
                    }
                }
            });
        } else {
            alert('Không thể tải dữ liệu từ server.');
        }
    } catch (error) {
        console.error('Lỗi:', error);
    }

