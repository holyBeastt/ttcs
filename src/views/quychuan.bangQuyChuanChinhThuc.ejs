      async function exportToExcel() {
        const formattedData = renderData.map((item, index) => {
          // Cập nhật LopHocPhan với giá trị mới từ generateGroupCode
          item.LopHocPhan = generateGroupCode(item);

          // Đổi key KiHoc -> Ki, NamHoc -> Nam
          const { KiHoc, NamHoc, ...rest } = item;
          return { Ki: KiHoc, Nam: NamHoc, ...rest };
        });

        // console.log(formattedData)

        try {
          const response = await fetch("/qcdk-export-excel", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ renderData: formattedData }),
          });

          if (!response.ok) {
            throw new Error(`Failed to export: ${response.statusText}`);
          }

          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          a.download = `file_quy_chuan_chinh_thuc_hoc_ki_${renderData[0].KiHoc}_nam_hoc_${renderData[0].NamHoc}.xlsx`;
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          window.URL.revokeObjectURL(url);
        } catch (error) {
          console.error("Error exporting data:", error);
        }
      }

      // Hàm xuất Excel với 19 cột (API mới)
      async function exportToExcelQC() {
        try {
          // Map he_dao_tao từ ID sang tên trước khi gửi BE
          const exportData = renderData.map(item => {
            const newItem = { ...item };
            if (newItem.he_dao_tao && heDaoTaoList.length > 0) {
              const idValue = typeof newItem.he_dao_tao === 'string' 
                ? parseInt(newItem.he_dao_tao, 10) 
                : newItem.he_dao_tao;
              const found = heDaoTaoList.find(h => h.id === idValue);
              if (found) {
                newItem.he_dao_tao = found.tenHe;
              }
            }
            return newItem;
          });

          const response = await fetch("/qcct-export-excel", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify({ renderData: exportData }),
          });

          if (!response.ok) {
            throw new Error(`Failed to export: ${response.statusText}`);
          }

          const blob = await response.blob();
          const url = window.URL.createObjectURL(blob);
          const a = document.createElement("a");
          a.href = url;
          const kiHoc = renderData[0]?.KiHoc || renderData[0]?.Ki || "";
          const namHoc = renderData[0]?.NamHoc || renderData[0]?.Nam || "";
          a.download = `file_quy_chuan_chinh_thuc_hoc_ki_${kiHoc}_nam_hoc_${namHoc}.xlsx`;
          document.body.appendChild(a);
          a.click();
          document.body.removeChild(a);
          window.URL.revokeObjectURL(url);
          
          // Đóng menu sau khi xuất file
          const menu = document.getElementById("file-format-menu");
          menu.style.display = "none";
        } catch (error) {
          console.error("Error exporting data:", error);
          Swal.fire({
            title: "Lỗi",
            text: "Không thể xuất file. Vui lòng thử lại!",
            icon: "error",
            confirmButtonText: "OK",
          });
        }
      }

