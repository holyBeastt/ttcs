        // Search by lecturer teaching (case-insensitive, partial match)
        if (searchGiaoVienGiangDay) {
          filteredData = filteredData.filter(item => 
            item.GiaoVienGiangDay && item.GiaoVienGiangDay.toLowerCase().includes(searchGiaoVienGiangDay)
          );
