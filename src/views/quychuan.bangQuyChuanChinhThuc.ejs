        const customWidths = {
          Khoa: "5%",
          LopHocPhan: "22.5%",
          GiaoVien: "25%",
          GiaoVienGiangDay: "22.5%",
        };

        // Tạo mảng đối tượng chứa tên cột và width (nếu có custom, nếu không sẽ lấy auto)
        const columnsWithWidth = columnsToDisplay.map((col) => ({
          name: col,
          width: customWidths[col] || "auto",
        }));

        let tableHtml = "";

        // Thêm cột STT đầu tiên
        tableHtml += `<th style="width: 3%;">STT</th>`;

        // Tạo header với width được chỉ định
        columnsWithWidth.forEach((col) => {
          const newHeaderName = headersMap[col.name] || col.name;
          tableHtml += `<th style="width: ${col.width};">${newHeaderName}</th>`;
        });
        document.getElementById("table-header").innerHTML = tableHtml;

        // Xóa dữ liệu bảng cũ nếu có trước khi thêm mới
        document.getElementById("data-table-body").innerHTML = "";

        // Render các dòng dữ liệu vào bảng
        const tableRows = data
          .map((item, index) => {
            // Thêm cột STT vào đầu mỗi dòng
            let rowHtml = `<td style="text-align: center;">${index + 1}</td>`;
            
            rowHtml += columnsToDisplay
              .map((key) => {
                let cellValue = item[key] !== null ? item[key] : "";

                // Format ngày cho các cột ngày
                if (key === "NgayBatDau" || key === "NgayKetThuc") {
                  cellValue = formatDate(cellValue);
                }

                // Chuyển đổi 0 và 1 thành 'Có' hoặc 'Không' cho cột MoiGiang
                if (key === "MoiGiang") {
                  cellValue = cellValue === 1 ? "Có" : "Không";
                }

                // Hiển thị tenHe của hệ đào tạo thay vì id
                if (key === "he_dao_tao" && cellValue && heDaoTaoList.length > 0) {
                  // Convert cellValue to number to ensure proper comparison
                  const idValue = typeof cellValue === 'string' ? parseInt(cellValue, 10) : cellValue;
                  const found = heDaoTaoList.find(item => item.id === idValue);
                  cellValue = found ? found.tenHe : cellValue;
                }

                return `<td>${cellValue}</td>`;
              })
              .join("");
            return `<tr>${rowHtml}</tr>`;
          })
          .join("");

        document.getElementById("data-table-body").innerHTML = tableRows;
      }

