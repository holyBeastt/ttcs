      // Function to apply search to the data
      function applySearch() {
        const searchGiaoVien = document.getElementById("searchGiaoVien").value.toLowerCase().trim();
        const searchGiaoVienGiangDay = document.getElementById("searchGiaoVienGiangDay").value.toLowerCase().trim();
        const searchLopHocPhan = document.getElementById("searchLopHocPhan").value.toLowerCase().trim();

        let filteredData = renderData;

