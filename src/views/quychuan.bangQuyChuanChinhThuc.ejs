        // Search by class section (case-insensitive, partial match)
        if (searchLopHocPhan) {
          filteredData = filteredData.filter(item => 
            item.LopHocPhan && item.LopHocPhan.toLowerCase().includes(searchLopHocPhan)
          );
        }

        // Re-render the table with filtered data
        renderTable(filteredData);
      }

      // Add event listeners for search inputs (trigger on input for real-time search)
      document.getElementById("searchGiaoVien").addEventListener("input", applySearch);
