        document.getElementById('totalQC').textContent = totalQC.toFixed(2);


        labelTotal.style.display = "block";
      }


      // Hàm format ngày tháng năm
      function formatDate(dateValue) {
        if (!dateValue) return "";
        
        try {
          let date;
          
          // Nếu là string, chuyển thành Date object
          if (typeof dateValue === "string") {
            // Xử lý các định dạng khác nhau
            if (dateValue.includes("T")) {
              // ISO format: 2024-01-15T00:00:00.000Z
              date = new Date(dateValue);
            } else if (dateValue.includes("/")) {
              // Format: dd/mm/yyyy hoặc mm/dd/yyyy
              const parts = dateValue.split("/");
              if (parts.length === 3) {
                date = new Date(parts[2], parts[1] - 1, parts[0]);
              }
            } else if (dateValue.includes("-")) {
              // Format: yyyy-mm-dd
              date = new Date(dateValue);
            } else {
              date = new Date(dateValue);
            }
          } else if (dateValue instanceof Date) {
            date = dateValue;
          } else {
            return dateValue; // Trả về giá trị gốc nếu không phải ngày
          }
          
          // Kiểm tra ngày hợp lệ
          if (isNaN(date.getTime())) {
            return dateValue; // Trả về giá trị gốc nếu ngày không hợp lệ
          }
          
          // Format thành dd/mm/yyyy
          const day = String(date.getDate()).padStart(2, "0");
          const month = String(date.getMonth() + 1).padStart(2, "0");
          const year = date.getFullYear();
          
          return `${day}/${month}/${year}`;
        } catch (error) {
          console.error("Error formatting date:", error);
          return dateValue; // Trả về giá trị gốc nếu có lỗi
        }
      }

