    <script>
      let dataQC = [];

      // Hàm kiểm tra xem có thay đổi chưa được lưu không
      function hasUnsavedChanges() {
        if (!localData || !renderData) return false;
        
        // So sánh số lượng dữ liệu
        if (localData.length !== renderData.length) {
          return true;
        }

        // So sánh từng dòng dữ liệu
        for (let i = 0; i < localData.length; i++) {
          const localRow = localData[i];
          const renderRow = renderData.find(row => row.ID === localRow.ID);
          
          if (!renderRow) {
            return true; // Có dòng mới được thêm
          }
          
          // So sánh nội dung (loại bỏ các trường không cần so sánh)
          if (JSON.stringify(localRow) !== JSON.stringify(renderRow)) {
            return true; // Có thay đổi
          }
        }
        
        return false;
      }

      // Hàm fetch lần đầu để lấy dữ liệu từ server
      async function fetchData() {
        // Lấy giá trị từ các phần tử đầu vào và kiểm tra xem có tồn tại hay không
        let Dot = document.getElementById("combobox-dot")?.value;
        let Ki = document.getElementById("comboboxki")?.value;
        let Nam = document.getElementById("NamHoc")?.value;
        let Khoa = document.getElementById("MaPhongBan")?.value;

        // Kiểm tra nếu có phần tử nào chưa được chọn
        if (!Dot || !Ki || !Nam || !Khoa) {
          alert("Vui lòng điền đầy đủ các thông tin cần thiết.");
          return;
        }

        const body = {
          Khoa: Khoa,
          Dot: Dot,
          Ki: Ki,
          Nam: Nam,
        };

        try {
          const response = await fetch("/qcdk", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(body),
          });

          // Kiểm tra phản hồi từ server
          if (!response.ok) {
            throw new Error("Lấy dữ liệu thất bại");
          }

          const rs = await response.json();
          dataQC = rs.data; // Lưu dữ liệu vào dataQC
        } catch (error) {
          console.error("Error:", error);
          alert("Lấy dữ liệu thất bại! Vui lòng kiểm tra lại kết nối.");
        }
      }

      // Hàm xử lý sự kiện khi người dùng nhấn nút "ban-hanh"
      document
        .getElementById("ban-hanh")
        .addEventListener("click", async function () {
          // Kiểm tra xem bảng có dữ liệu đang hiển thị không
          if (!localData || localData.length === 0) {
            Swal.fire({
              title: "Thông báo",
              html: "Không có dữ liệu trong bảng để ban hành. Vui lòng hiển thị dữ liệu trước.",
              icon: "warning",
              confirmButtonText: "OK",
              width: "auto",
              padding: "20px",
            });
            return;
          }

          // Kiểm tra xem có thay đổi chưa được lưu không
          if (hasUnsavedChanges()) {
            const result = await Swal.fire({
              title: "Cảnh báo",
              html: "Bạn có thay đổi chưa được lưu trong bảng. Bạn có muốn cập nhật trước khi ban hành không?",
              icon: "warning",
              showCancelButton: true,
              confirmButtonText: "Cập nhật và ban hành",
              cancelButtonText: "Hủy",
              width: "auto",
              padding: "20px",
            });

            if (result.isConfirmed) {
              try {
                // Cập nhật dữ liệu trước
                await updateDataInServer();
                // Fetch lại dữ liệu sau khi cập nhật để đảm bảo đồng bộ
                await fetchData();
                
                // So sánh số lượng dữ liệu
                if (dataQC.length !== localData.length) {
                  Swal.fire({
                    title: "Cảnh báo",
                    html: `Số lượng dữ liệu ban hành (${dataQC.length}) không khớp với số lượng dữ liệu trong bảng (${localData.length}). Vui lòng kiểm tra lại.`,
                    icon: "warning",
                    confirmButtonText: "OK",
                    width: "auto",
                    padding: "20px",
