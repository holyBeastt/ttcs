                Swal.fire({
                  title: "Lỗi",
                  html: "Không thể cập nhật dữ liệu. Vui lòng thử lại.",
                  icon: "error",
                  confirmButtonText: "OK",
                  width: "auto",
                  padding: "20px",
                });
                return;
              }
            } else {
              return; // Người dùng hủy
            }
          } else {
            // Không có thay đổi, sử dụng dữ liệu đang hiển thị trong bảng
            dataQC = JSON.parse(JSON.stringify(localData));
            
            // So sánh với dữ liệu trên server để đảm bảo đồng bộ
            await fetchData();
            
            // So sánh số lượng dữ liệu
            if (dataQC.length !== localData.length) {
              const result = await Swal.fire({
