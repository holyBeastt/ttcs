        unhideButton2(role, MaPhongBan);

        // Load hệ đào tạo vào select
        loadHeDoAnToSelect();
      });

      async function loadHeDoAnToSelect() {
        try {
          const res = await fetch('/api/gvm/v1/he-do-an');
          const json = await res.json();

          if (!json.success) {
            console.error('API lỗi');
            return;
          }

          const select = document.getElementById('he_dao_tao');
          if (!select) return;

          // clear option cũ (nếu cần reload)
          select.innerHTML = '';

          json.data.forEach(item => {
            const option = document.createElement('option');
            option.value = item.id;
            option.textContent = item.he_dao_tao;
            select.appendChild(option);
          });

        } catch (err) {
          console.error('Lỗi load hệ đồ án:', err);
        }
      }

      function unhideButton2(role, MaPhongBan) {
        if ((role == APP_ROLES.troLy_phong || role == APP_ROLES.lanhDao_phong) && MaPhongBan == APP_DEPARTMENTS.daoTao
          || role == APP_ROLES.lanhDao_khoa || role == APP_ROLES.gv_cnbm
        ) {
          const exportBtn = document.getElementById("export");

          exportBtn.style.display = "block";
        }
      }
