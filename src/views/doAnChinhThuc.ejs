    <script>
      async function exportDoAnChinhThuc() {
        const tableBody = document.getElementById("data-table-body");
        let NamValue = document.getElementById('NamHoc').value;
        let KhoaValue = document.getElementById('MaPhongBan').value;



        // Khởi tạo mảng chứa dữ liệu
        const tableData = [];

        // Lặp qua từng hàng trong tbody
        Array.from(tableBody.querySelectorAll("tr")).forEach(row => {
          const cells = row.querySelectorAll("td");

          // Đưa dữ liệu từng ô vào một đối tượng
          const rowData = {
            SinhVien: cells[0]?.innerText.trim(),
            MaSV: cells[1]?.innerText.trim(),
            Khoa: cells[2]?.innerText.trim(),
            TenDeTai: cells[3]?.innerText.trim(),
            GiangVienHuongDan: cells[4]?.innerText.trim(),
            NamHoc: NamValue,
          };

          tableData.push(rowData);
        });

        console.log(tableData)
        try {
          const response = await fetch('/doan-export-word', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify(tableData)
          });

          if (!response.ok) {
            const errorData = await response.json();
            throw new Error(errorData.message || 'Lỗi khi xuất file Word');
          }

          // Tạo blob từ phản hồi
          const blob = await response.blob();

          // Tạo URL cho blob
          const url = window.URL.createObjectURL(blob);

          // Tạo phần tử tải xuống
          const a = document.createElement('a');
          a.href = url;
          a.download = `do_an_chinh_thuc_khoa_${KhoaValue}_nam_${NamValue}.docx`;
          document.body.appendChild(a);

          // Kích hoạt tải xuống
          a.click();

          // Dọn dẹp
          window.URL.revokeObjectURL(url);
          document.body.removeChild(a);
        } catch (error) {
          console.error('Lỗi:', error);
          alert('Đã xảy ra lỗi khi xuất file Word: ' + error.message);
        }
      };
    </script>

    <script>
      // Lắng nghe sự kiện click vào button
      document.getElementById('render').addEventListener('click', function () {
        loadData(); // Gọi hàm loadData khi button được click
      });

      async function loadData() {
          // 1. Khai báo các DOM elements (Lấy 1 lần dùng nhiều lần)
          const elDot = document.getElementById('combobox-dot');
          const elKi = document.getElementById('combobox-ki');
          const elNam = document.getElementById('NamHoc');
          const elKhoa = document.getElementById('MaPhongBan');
          const elHeDaoTao = document.getElementById('he_dao_tao');

          // 2. Hàm lõi: Lấy dữ liệu và Render (Dùng chung cho cả lúc đầu và lúc change)
          const fetchAndRender = async () => {

              try {
                  // Lấy giá trị hiện tại
                  const requestData = {
                      Khoa: elKhoa.value,
                      Dot: elDot.value,
                      Ki: elKi.value,
                      Nam: elNam.value,
                      heDaoTaoValue: elHeDaoTao.value // ✅ Đã sửa lỗi thiếu trường này ở code cũ
                  };

                  // Gọi API
                  const response = await fetch('/getDataDoAnChinhThuc', {
                      method: 'POST',
                      headers: { 'Content-Type': 'application/json' },
                      body: JSON.stringify(requestData),
                  });

                  // Xử lý lỗi HTTP (400, 500...)
                  if (!response.ok) {
                      const errorData = await response.json();
                      throw new Error(errorData.message || "Lỗi từ server");
                  }

                  // Xử lý dữ liệu thành công
                  const globalData = await response.json();

                  // 3️⃣ KIỂM TRA DỮ LIỆU RỖNG
                  // Nếu result không tồn tại hoặc mảng rỗng
                  if (!globalData.result || globalData.result.length === 0) {
                      // Hiện Toast thông báo nhẹ nhàng
                      Toastify({
                          text: "⚠️ Không tìm thấy dữ liệu phù hợp!",
                          duration: 3000,
                          gravity: "top",
                          position: "right",
                          stopOnFocus: true,
                          style: {
                              background: "#f0ad4e", // Màu cam (cảnh báo)
                              color: "#fff"
                          }
                      }).showToast();

                      // Vẫn gọi renderTable với mảng rỗng để XÓA bảng cũ (nếu đang hiển thị dữ liệu cũ)
                      if (typeof renderTable === 'function') {
                          renderTable([]); 
                          // Xóa luôn danh sách quyết định
                          const listContainer = document.getElementById("SoQD-list");
                          if (listContainer) listContainer.innerHTML = "";
                      }
                      return; // Dừng hàm tại đây
                  }

                  // Render danh sách Quyết định (nếu có)
                  const SoQDList = globalData.SoQDList;
                  const listContainer = document.getElementById("SoQD-list");
                  if (listContainer && SoQDList) {
                      listContainer.innerHTML = SoQDList.map(item => `<li>Theo QĐ số: ${item.SoQD}</li>`).join("");
                  }

                  // Render Bảng
                  if (typeof renderTable === 'function') {
                      renderTable(globalData.result);
                  }

              } catch (error) {
                  // Xử lý lỗi chung (Mạng, Server, Code...)
                  console.error('Lỗi tải dữ liệu:', error);
                  Swal.fire({
                      title: 'Thông báo',
                      text: error.message || "Đã có lỗi xảy ra!",
                      icon: 'error',
                      confirmButtonText: 'OK'
                  });
              }
          };

          // 3. Gắn sự kiện: Khi thay đổi combobox -> Gọi hàm fetchAndRender
          // Mẹo: Dùng mảng để loop thay vì viết từng dòng
          // [elDot, elKi, elNam, elKhoa, elHeDaoTao].forEach(el => {
          //     if (el) el.addEventListener('change', fetchAndRender);
          // });

          // 4. Gọi lần đầu tiên ngay khi vào trang
          await fetchAndRender();
      }

      // Hàm renderTable sẽ được sử dụng để render bảng
      function renderTable(data) {
        const columnsToDisplay = ['SinhVien', 'MaSV', 'MaPhongBan', 'TenDeTai', 'GiangVienDefault', 'GiangVien1', 'GiangVien2', 'NgayBatDau', 'NgayKetThuc'];

        const headersMap = {
          'SinhVien': 'Sinh Viên',
          'MaSV': 'Mã sinh viên',
          'MaPhongBan': 'Khoa',
          'TenDeTai': 'Tên đề tài',
          'GiangVienDefault': 'Giảng viên hướng dẫn',
          'GiangVien1': 'Giảng viên hướng dẫn 1',
          'GiangVien2': 'Giảng viên hướng dẫn 2',
          'NgayBatDau': 'Ngày bắt đầu',
          'NgayKetThuc': 'Ngày kết thúc',
        };

        const tableHeader = document.getElementById('table-header');
        tableHeader.innerHTML = columnsToDisplay.map(header => {
          const newHeaderName = headersMap[header] || header;
          let widthStyle = '';

          if (header === 'TenDeTai') widthStyle = 'width: 20%';
          if (header === 'GiangVienDefault') widthStyle = 'width: 15%';
          if (header === 'GiangVien1') widthStyle = 'width: 15%';

          return `<th style="${widthStyle}">${newHeaderName}</th>`;
        }).join('');



        const tableBody = document.getElementById('data-table-body');
        tableBody.innerHTML = data.map(item => {
          const rowHtml = columnsToDisplay.map(key => {
            let cellValue = item[key] !== null ? item[key] : '';
            if (key === 'GiangVienDefault') {
              cellValue = (cellValue || '').replace(/\n/g, '<br>');
            }
            if (['NgayBatDau', 'NgayKetThuc'].includes(key) && cellValue) {
              const date = new Date(cellValue);
              cellValue = date.toLocaleDateString('vi-VN');
            }
            return `<td>${cellValue}</td>`;
          }).join('');
          return `<tr>${rowHtml}</tr>`;
        }).join('');

        const loadingSpinner = document.getElementById('loading-spinner');
        if (loadingSpinner) {
          loadingSpinner.remove();
        }
      }

      // Chức năng Search - Tìm theo Sinh viên, Tên đề tài, Giảng viên
      function performSearch() {
        const searchSinhVien = document.getElementById('searchSinhVien').value.toLowerCase().trim();
        const searchDeTai = document.getElementById('searchDeTai').value.toLowerCase().trim();
        const searchGiangVien = document.getElementById('searchGiangVien').value.toLowerCase().trim();
        
        const tableBody = document.getElementById('data-table-body');
        const rows = tableBody.querySelectorAll('tr');

        rows.forEach(row => {
          const cells = row.querySelectorAll('td');
          
          // Cột 0 = Sinh viên
          const sinhVienMatch = !searchSinhVien || 
            (cells[0] && cells[0].textContent.toLowerCase().includes(searchSinhVien));
          
          // Cột 3 = Tên đề tài
          const deTaiMatch = !searchDeTai || 
            (cells[3] && cells[3].textContent.toLowerCase().includes(searchDeTai));
          
          // Cột 4, 5, 6 = Giảng viên
          const giangVienMatch = !searchGiangVien || 
            (cells[4] && cells[4].textContent.toLowerCase().includes(searchGiangVien)) ||
            (cells[5] && cells[5].textContent.toLowerCase().includes(searchGiangVien)) ||
            (cells[6] && cells[6].textContent.toLowerCase().includes(searchGiangVien));

          // Hiển thị nếu tất cả điều kiện đều khớp
          row.style.display = (sinhVienMatch && deTaiMatch && giangVienMatch) ? '' : 'none';
        });
      }

      // Gắn sự kiện cho 3 ô search
      document.getElementById('searchSinhVien').addEventListener('input', performSearch);
      document.getElementById('searchDeTai').addEventListener('input', performSearch);
      document.getElementById('searchGiangVien').addEventListener('input', performSearch);

    </script>

