<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Học Viện Kỹ Thuật Mật Mã</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/importGvmList.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/table.css" />
    <link rel="stylesheet" href="/css/admin.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </head>

  <body>
    <!-- Phần header -->
    <%- include('adminHeader') %>

    <div class="container my-5 box">
      <form id="toaNhaForm" class="row">
        <div class="col-md-6">
          <label for="TenToaNha">Tên Tòa Nhà:</label>
          <input
            type="text"
            name="TenToaNha"
            id="TenToaNha"
            class="form-control"
            required
          />
        </div>
        <div class="col-md-6">
          <label for="SoTang">Số Tầng:</label>
          <input
            type="number"
            name="SoTang"
            id="SoTang"
            class="form-control"
            required
          />
        </div>
        <div class="col-md-12 mt-3">
          <button type="button" class="btn btn-primary" id="addButton">
            Thêm
          </button>
        </div>
      </form>

      <div class="pb-3">
        <table id="ToaNhaTable" class="table table-bordered">
          <thead>
            <tr>
              <th>STT</th>
              <th>Tên Tòa Nhà</th>
              <th>Số Tầng</th>
              <th>Thao Tác</th>
            </tr>
          </thead>
          <tbody id="data-table-body">
            <% if (toanha && toanha.length > 0) { %> <% for (var i = 0; i <
            toanha.length; i++) { %>
            <tr data-id="<%= toanha[i].id %>">
              <td><%= i + 1 %></td>
              <td class="editable TenToaNha-cell">
                <%= toanha[i].TenToaNha %>
              </td>
              <td class="editable SoTang-cell"><%= toanha[i].SoTang %></td>
              <td class="d-flex justify-content-center">
                <button class="bi bi-pencil action-button edit-btn"></button>
                <button
                  class="bi bi-trash3 action-button me-2"
                  onclick="deleteToaNha(this, '<%= toanha[i].id %>')"
                ></button>
              </td>
            </tr>
            <% } %> <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <script>
      $(document).ready(function () {
        let originalValues = {};

        // Thêm xử lý sự kiện Enter
        $("#toaNhaForm").on("keypress", function (e) {
          if (e.which === 13) {
            e.preventDefault();
            $("#addButton").click();
          }
        });

        // Xử lý nút Edit
        $(document).on("click", ".edit-btn", function () {
          const row = $(this).closest("tr");
          const id = row.data("id");

          originalValues[id] = {
            TenToaNha: row.find(".TenToaNha-cell").text().trim(),
            SoTang: row.find(".SoTang-cell").text().trim(),
          };

          row.find(".TenToaNha-cell").html(`
                    <input type="text" class="form-control" value="${originalValues[id].TenToaNha}">
                `);

          row.find(".SoTang-cell").html(`
                    <input type="number" class="form-control" value="${originalValues[id].SoTang}">
                `);

          const actionCell = row.find("td:last-child");
          actionCell.html(`
                    <button class="save-btn btn btn-success btn-sm">Lưu</button>
                    <button class="cancel-btn btn btn-danger btn-sm ms-2">Hủy</button>
                `);
        });

        // Xử lý nút Save
        $(document).on("click", ".save-btn", function () {
          const row = $(this).closest("tr");
          const id = row.data("id");
          const updatedData = {
            TenToaNha: row.find(".TenToaNha-cell input").val(),
            SoTang: row.find(".SoTang-cell input").val(),
          };

          $.ajax({
            url: `/toaNha/${id}`,
            method: "PUT",
            contentType: "application/json",
            data: JSON.stringify(updatedData),
            success: function (response) {
              row.find(".TenToaNha-cell").text(updatedData.TenToaNha);
              row.find(".SoTang-cell").text(updatedData.SoTang);

              const actionCell = row.find("td:last-child");
              actionCell.html(`
                            <button class="bi bi-pencil action-button edit-btn"></button>
                            <button class="bi bi-trash3 action-button me-2" 
                                onclick="deleteToaNha(this, '${id}')">
                            </button>
                        `);

              alert("Cập nhật thành công!");
            },
            error: function (error) {
              alert("Có lỗi xảy ra khi cập nhật");
            },
          });
        });

        // Xử lý nút Cancel
        $(document).on("click", ".cancel-btn", function () {
          const row = $(this).closest("tr");
          const id = row.data("id");

          row.find(".TenToaNha-cell").text(originalValues[id].TenToaNha);
          row.find(".SoTang-cell").text(originalValues[id].SoTang);

          const actionCell = row.find("td:last-child");
          actionCell.html(`
                    <button class="bi bi-pencil action-button edit-btn"></button>
                    <button class="bi bi-trash3 action-button me-2" 
                        onclick="deleteToaNha(this, '${id}')">
                    </button>
                `);
        });

        // Xử lý nút Thêm
        $("#addButton").click(function (event) {
          event.preventDefault();

          const TenToaNha = $("#TenToaNha").val();
          const SoTang = $("#SoTang").val();

          $.ajax({
            url: "/checkToaNhaExistence",
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify({ TenToaNha: TenToaNha }),
            success: function (response) {
              addNewToaNha(TenToaNha, SoTang);
            },
            error: function (xhr) {
              if (xhr.status === 409) {
                alert(xhr.responseJSON.message);
              } else {
                alert("Có lỗi xảy ra khi kiểm tra.");
              }
            },
          });
        });

        function addNewToaNha(TenToaNha, SoTang) {
          $.ajax({
            url: "/toaNha",
            method: "POST",
            contentType: "application/json",
            data: JSON.stringify({ TenToaNha, SoTang }),
            success: function (response) {
              alert("Thêm mới thành công!");
              location.reload();
            },
            error: function (error) {
              alert("Có lỗi xảy ra khi thêm mới.");
            },
          });
        }
      });

      function deleteToaNha(button, id) {
        if (confirm("Bạn có chắc chắn muốn xóa tòa nhà này không?")) {
          $.ajax({
            url: `/toaNha/${id}`,
            method: "DELETE",
            success: function (response) {
              alert("Xóa thành công!");
              $(button).closest("tr").remove();
            },
            error: function (error) {
              alert("Có lỗi xảy ra khi xóa tòa nhà.");
            },
          });
        }
      }
    </script>
  </body>
</html>
