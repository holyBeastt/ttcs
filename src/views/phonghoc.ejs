<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Học Viện Kỹ Thuật Mật Mã</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css"
    />
    <link rel="stylesheet" href="/css/phonghoc.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"
    />
    <style>
    .ca-list-row {
      display: flex;
      gap: 10px;
      margin-bottom: 16px;
      justify-content: flex-start;
      flex-wrap: wrap;
    }
    .ca-item {
      padding: 6px 18px;
      border-radius: 20px;
      background: #f0f4ff;
      color: #1976d2;
      border: 1.5px solid #1976d2;
      font-weight: 500;
      cursor: pointer;
      transition: all 0.2s;
      user-select: none;
    }
    .ca-item.active,
    .ca-item:hover {
      background: #1976d2;
      color: #fff;
      border-color: #1976d2;
      box-shadow: 0 2px 8px #1976d23a;
    }
  </style>
  </head>
  <body>
    <%- include('header') %>

    <h1 style="margin-top: 30px">Quản lý phòng học theo TKB</h1>
    <div class="filter-container">
      <!-- Chọn tòa nhà -->
      <div class="filter-item">
        <label><i class="fas fa-building"></i> Chọn tòa nhà:</label>
        <select id="toaNhaSelect">
          <option value="">Chọn tòa nhà</option>
          <% toaNha.forEach(function(toa) { %>
          <option value="<%= toa.TenToaNha %>"><%= toa.TenToaNha %></option>
          <% }); %>
        </select>
        <div id="toaNhaWarning" class="text-danger">Vui lòng chọn tòa nhà.</div>
      </div>

      <!-- Chọn ngày -->
      <div class="filter-item">
        <label><i class="fas fa-calendar-alt"></i> Chọn ngày:</label>
        <input
          type="date"
          id="datePicker"
          value="<%= new Date().toISOString().split('T')[0] %>"
        />
      </div>

      <!-- Chọn ca học -->
      <div class="filter-item">
        <label><i class="fas fa-clock"></i> Chọn ca học:</label>
        <select id="caHocSelect">
          <option value="">Chọn ca học</option>
          <option value="ALL">Cả ngày</option>
          <% periods.forEach(function(period) { %>
            <option value="<%= period.start %>-<%= period.end %>">
              <%= period.display %>
            </option>
          <% }); %>
        </select>
        <div id="caHocWarning" class="text-danger">Vui lòng chọn ca học.</div>
      </div>

      <!-- Nút tìm kiếm -->
      <div class="filter-item">
        <button id="searchBtn" class="btn btn-primary">
          <i class="fas fa-search"></i> Tìm kiếm
        </button>
      </div>
    </div>

    <div class="schedule-container">
      <!-- Phòng học sẽ được render động ở đây -->
    </div>

    <div
      class="modal fade"
      id="roomModal"
      tabindex="-1"
      aria-labelledby="roomModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="roomModalLabel">Room Details</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <p class="info-item">
              <strong><i class="fas fa-book"></i>Môn học:</strong>
              <span class="info-value">No class scheduled</span>
            </p>
            <p class="info-item">
              <strong><i class="fas fa-user-tie"></i>Giảng viên:</strong>
              <span class="info-value">N/A</span>
            </p>
            <p class="info-item">
              <strong><i class="fas fa-users"></i>Số lượng sinh viên:</strong>
              <span class="info-value">N/A</span>
            </p>
            <p class="info-item">
              <strong><i class="fas fa-clock"></i>Ca:</strong>
              <span class="info-value">N/A</span>
            </p>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-primary"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Thêm jQuery và Bootstrap JS -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Modal cho mượn phòng -->
    <div
      class="modal fade"
      id="muonPhongModal"
      tabindex="-1"
      aria-labelledby="muonPhongModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="muonPhongModalLabel">Cho mượn phòng học</h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="muonPhongForm">
              <input type="hidden" id="muonPhong" />
              <div class="mb-3">
                <label for="muonTenMon" class="form-label">
                  <i class="fas fa-book"></i> Tên môn học / Lý do:
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="muonTenMon"
                  placeholder="Nhập tên môn học hoặc lý do cho mượn"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="muonGiangVien" class="form-label">
                  <i class="fas fa-user-tie"></i> Giảng viên:
                </label>
                <input
                  type="text"
                  class="form-control"
                  id="muonGiangVien"
                  placeholder="Nhập tên giảng viên (tùy chọn)"
                />
              </div>
              <div class="mb-3">
                <label for="muonCaHoc" class="form-label">
                  <i class="fas fa-clock"></i> Ca học:
                </label>
                <select class="form-select" id="muonCaHoc" required>
                  <option value="">Chọn ca học</option>
                  <% periods.forEach(function(period) { %>
                    <option value="<%= period.start %>-<%= period.end %>"><%= period.display %></option>
                  <% }); %>
                </select>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Hủy
            </button>
            <button
              type="button"
              class="btn btn-primary"
              id="saveMuonPhongBtn"
            >
              <i class="fas fa-save"></i> Lưu
            </button>
          </div>
        </div>
      </div>
    </div>

    <script>
      $(document).ready(function () {
        // Kiểm tra quyền isKhoa
        const isKhoa = localStorage.getItem("isKhoa");
        // Lưu template gốc của modal cho mượn phòng để có thể phục hồi nếu bị ghi đè
        const muonModalTemplate = $("#muonPhongModal .modal-body").html();
        // Hàm kiểm tra và hiển thị cảnh báo
        function validateInputs() {
          let isValid = true;

          const toaNha = $("#toaNhaSelect").val();
          const caHoc = $("#caHocSelect").val();

          // Kiểm tra tòa nhà
          if (!toaNha) {
            $("#toaNhaWarning").show(); // Hiển thị cảnh báo
            isValid = false;
          } else {
            $("#toaNhaWarning").hide(); // Ẩn cảnh báo
          }

          // Kiểm tra ca học
          if (!caHoc) {
            $("#caHocWarning").show(); // Hiển thị cảnh báo
            isValid = false;
          } else {
            $("#caHocWarning").hide(); // Ẩn cảnh báo
          }

          return isValid;
        }

        // Sự kiện tìm kiếm
        $("#searchBtn").click(function () {
          if (validateInputs()) {
            loadPhongHoc(); // Chỉ gọi hàm loadPhongHoc nếu các input hợp lệ
          }
        });
        // Hàm load danh sách phòng
        function loadPhongHoc() {
          const toaNha = $("#toaNhaSelect").val();
          const ngay = $("#datePicker").val();
          const ca = $("#caHocSelect").val();

          if (!toaNha || !ngay || !ca) return;

          $.ajax({
            url: "/getPhongTrong",
            method: "GET",
            data: { toaNha, ngay, ca },
            success: function (response) {
              if (response.success) {
                renderPhongHoc(response.phongTrong, response.phongDaSuDung, response.phongMuon || []);
              }
            },
            error: function (error) {
              console.error("Lỗi khi tải danh sách phòng:", error);
            },
          });
        }

        // Hàm render danh sách phòng
        function renderPhongHoc(phongTrong, phongDaSuDung) {
          const container = $(".schedule-container");
          container.empty();

          // Tạo mảng tất cả phòng duy nhất và sắp xếp theo tầng
          const phongMap = {};
          [...phongTrong, ...phongDaSuDung].forEach((p) => {
            phongMap[p.phong] = p;
          });
          const allPhongs = Object.values(phongMap).sort((a, b) => a.phong - b.phong);

          // Nhóm phòng theo tầng
          const phongsByFloor = {};
          allPhongs.forEach((p) => {
            const floor = Math.floor(p.phong / 100);
            if (!phongsByFloor[floor]) {
              phongsByFloor[floor] = [];
            }
            phongsByFloor[floor].push(p);
          });

          // Render từng tầng
          Object.keys(phongsByFloor)
            .sort()
            .forEach((floor) => {
              const floorHtml = `
                  <div class="floor-row">
                      <div class="floor-label">T${floor}</div>
                      <div class="rooms-container">
                          ${phongsByFloor[floor]
                            .map((p) => {
                              const isAvailable = phongTrong.some(
                                (room) => room.phong === p.phong
                              );
                              const isAllDay = $("#caHocSelect").val() === "ALL";
                              const canMuonPhong = isKhoa == 0; // Cho phép cho mượn cả phòng có lớp
                              return `
                                  <div class="room ${
                                    isAvailable ? "available" : "occupied"
                                  }" data-phong="${p.phong}" style="position: relative;">
                                    <span>${p.phong}</span>
                                    <span>${
                                      isAvailable
                                        ? "Trống"
                                        : isAllDay
                                        ? "Có lớp"
                                        : "Có lớp"
                                    }</span>
                                    ${
                                      canMuonPhong
                                        ? `<button class="btn-muon-phong" data-phong="${p.phong}" title="Cho mượn phòng">
                                            <i class="fas fa-hand-holding"></i>
                                          </button>`
                                        : ""
                                    }
                                  </div>
                              `;
                            })
                            .join("")}
                      </div>
                  </div>
              `;
              container.append(floorHtml);
            });
        }

        // Sự kiện click vào phòng
        $(document).on("click", ".room", function () {
          const phong = $(this).data("phong");
          const isOccupied = $(this).hasClass("occupied");
          const toaNha = $("#toaNhaSelect").val();
          const ngay = $("#datePicker").val();
          const ca = $("#caHocSelect").val();

          $("#roomModalLabel").text(`Phòng ${phong}`);

          if (isOccupied) {
            $.ajax({
              url: "/getPhongTrong",
              method: "GET",
              data: { toaNha, ngay, ca },
              success: function (response) {
                if (response.success) {
                  let phongInfoArr = (response.phongDaSuDung || []).filter(
                    (p) => p.phong == phong
                  );

                  // Debug: log arrays to help trace duplicate-ca issue
                  console.log('getPhongTrong response', {
                    phongDaSuDung: response.phongDaSuDung,
                    phongMuon: response.phongMuon,
                    phongInfoArr
                  });

                  phongInfoArr.sort((a, b) => ((a.period_start || a.ca_start) - (b.period_start || b.ca_start)));
                  if (ca === "ALL") {
                    if (phongInfoArr.length === 0) {
                      $("#roomModal .modal-body").html(`<p class="info-item">Không có lớp học</p>`);
                      return;
                    }
                    // Sắp xếp theo ca sớm nhất (safe when period_start may be undefined)
                    phongInfoArr.sort((a, b) => ((a.period_start || a.ca_start) - (b.period_start || b.ca_start)));
                    // Tạo danh sách các ca
                    let caListHtml = `
  <div class="ca-list-row">
    ${phongInfoArr
      .map(
        (info, idx) => `
        <div class="ca-item ${info.ca_start ? 'borrowed' : ''}" data-idx="${idx}" data-borrow-id="${info.id || ''}">
          Ca ${info.period_start || info.ca_start}-${info.period_end || info.ca_end}
        </div>
      `
      )
      .join("")}
  </div>
`;
                    $("#roomModal .modal-body").html(`
              <div id="caList">${caListHtml}</div>
              <div id="caDetail"></div>
            `);
                    // Hiển thị mặc định ca sớm nhất
                    showCaDetail(0);
                    // Sự kiện chọn ca (scoped to the room modal)
                    $("#roomModal .ca-item").click(function () {
                      let idx = $(this).data("idx");
                      showCaDetail(idx);
                    });
                    function showCaDetail(idx) {
                      let info = phongInfoArr[idx];
                      const isMuonPhong = info.ca_start !== undefined && info.ca_start !== null;
                      const monHocDisplay = info.monhoc || (isMuonPhong ? info.ten_mon : null) || "N/A";
                      const giangVienDisplay = info.gv || (isMuonPhong ? "Cho mượn phòng" : "N/A");
                      $("#roomModal #caDetail").html(`
                <hr>
                <p class="info-item"><strong><i class="fas fa-book"></i>Môn học:</strong> <span class="info-value">${monHocDisplay}</span></p>
                <p class="info-item"><strong><i class="fas fa-user-tie"></i>Giảng viên:</strong> <span class="info-value">${giangVienDisplay}</span></p>
                <p class="info-item"><strong><i class="fas fa-users"></i>Số lượng sinh viên:</strong> <span class="info-value">${info.slsv || "N/A"}</span></p>
                <p class="info-item"><strong><i class="fas fa-clock"></i>Ca:</strong> <span class="info-value">${info.period_start || info.ca_start}-${info.period_end || info.ca_end}</span></p>
                ${isMuonPhong && isKhoa != '1' ? `<div class="mt-3 text-end"><button id="cancelMuonBtn" class="btn btn-danger" data-borrow-id="${info.id}">Hủy mượn</button></div>` : ''}
              `);
                      // Đánh dấu ca đang chọn (scoped)
                      $("#roomModal .ca-item").removeClass("active");
                      $("#roomModal .ca-item[data-idx='"+idx+"']").addClass("active");
                    }
                  } else {
                    // ...giữ nguyên code cũ cho từng ca...
                    const phongInfo = phongInfoArr[0];
                    if (phongInfo) {
                      const isMuonPhong = phongInfo.ca_start !== undefined && phongInfo.ca_start !== null;
                      const monHocDisplay = phongInfo.monhoc || (isMuonPhong ? phongInfo.ten_mon : null) || "N/A";
                      const giangVienDisplay = phongInfo.gv || (isMuonPhong ? "Cho mượn phòng" : "N/A");
                      $("#roomModal .modal-body").html(`
                <p class="info-item">
                  <strong><i class="fas fa-book"></i>Môn học:</strong> 
                  <span class="info-value">${monHocDisplay}</span>
                </p>
                <p class="info-item">
                  <strong><i class="fas fa-user-tie"></i>Giảng viên:</strong>
                  <span class="info-value">${giangVienDisplay}</span>
                </p>
                <p class="info-item">
                  <strong><i class="fas fa-users"></i>Số lượng sinh viên:</strong>
                  <span class="info-value">${phongInfo.slsv || "N/A"}</span>
                </p>
                <p class="info-item">
                  <strong><i class="fas fa-clock"></i>Ca:</strong>
                  <span class="info-value">${phongInfo.period_start || phongInfo.ca_start}-${phongInfo.period_end || phongInfo.ca_end}</span>
                </p>
              `);
                    }
                  }
                }
              },
              error: function (error) {
                console.error("Lỗi khi lấy thông tin phòng:", error);
              },
            });
          } else {
            $("#roomModal .modal-body").html(`
      <p class="info-item">
        <strong><i class="fas fa-book"></i>Môn học:</strong>
        <span class="info-value">Không có lớp học</span>
      </p>
      <p class="info-item">
        <strong><i class="fas fa-user-tie"></i>Giảng viên:</strong>
        <span class="info-value">N/A</span>
      </p>
      <p class="info-item">
        <strong><i class="fas fa-users"></i>Số lượng sinh viên:</strong>
        <span class="info-value">N/A</span>
      </p>
      <p class="info-item">
        <strong><i class="fas fa-clock"></i>Ca:</strong>
        <span class="info-value">N/A</span>
      </p>
    `);
          }

          new bootstrap.Modal(document.getElementById("roomModal")).show();
        });

        // Sự kiện click vào nút cho mượn phòng
        $(document).on("click", ".btn-muon-phong", function (e) {
          e.stopPropagation(); // Ngăn sự kiện click vào phòng
          const phong = $(this).data("phong");
          const toaNha = $("#toaNhaSelect").val();
          const ngay = $("#datePicker").val();
          
          // Phục hồi nội dung gốc của modal cho mượn phòng để đảm bảo form luôn có các trường cần thiết
          $("#muonPhongModal .modal-body").html(muonModalTemplate);

          $("#muonPhong").val(phong);
          $("#muonTenMon").val("");
          $("#muonGiangVien").val("");
          $("#muonCaHoc").val("");
          
          $("#muonPhongModalLabel").text(`Cho mượn phòng ${phong}`);
          const roomModalEl = document.getElementById("roomModal");
          if ($(roomModalEl).hasClass('show')) {
            $(roomModalEl).one('hidden.bs.modal', function () {
              new bootstrap.Modal(document.getElementById("muonPhongModal")).show();
            });
            const rmInstance = bootstrap.Modal.getInstance(roomModalEl);
            if (rmInstance) rmInstance.hide();
            else new bootstrap.Modal(roomModalEl).hide();
          } else {
            new bootstrap.Modal(document.getElementById("muonPhongModal")).show();
          }
        });

        // Lưu thông tin cho mượn phòng
        $("#saveMuonPhongBtn").click(function () {
          const phong = $("#muonPhong").val();
          const toaNha = $("#toaNhaSelect").val();
          const ngay = $("#datePicker").val();
          const tenMon = $("#muonTenMon").val();
          const giangVien = $("#muonGiangVien").val();
          const caHoc = $("#muonCaHoc").val();

          if (!tenMon || !caHoc) {
            alert("Vui lòng điền đầy đủ thông tin!");
            return;
          }

          // Tách ca học thành ca_start và ca_end
          const [caStart, caEnd] = caHoc.split('-');

          $("#saveMuonPhongBtn").prop('disabled', true);

          $.ajax({
            url: "/muonPhong",
            method: "POST",
            data: {
              phong: phong,
              toanha: toaNha,
              ngay: ngay,
              ten_mon: tenMon,
              giangvien: giangVien,
              ca_start: caStart,
              ca_end: caEnd
            },
            success: function (response) {
              if (response.success) {
                alert("Cho mượn phòng thành công!");
                bootstrap.Modal.getInstance(document.getElementById("muonPhongModal")).hide();
                loadPhongHoc(); // Reload danh sách phòng
              } else {
                alert(response.message || "Có lỗi xảy ra!");
              }
            },
            error: function (error) {
              console.error("Lỗi khi cho mượn phòng:", error);
              alert("Có lỗi xảy ra khi cho mượn phòng!");
            },
            complete: function() {
              $("#saveMuonPhongBtn").prop('disabled', false);
            }
          });
        });

        // Hủy mượn phòng
        $(document).on('click', '#cancelMuonBtn', function () {
          const id = $(this).data('borrow-id');
          if (!id) { alert('Không tìm thấy thông tin mượn.'); return; }
          if (!confirm('Bạn chắc chắn muốn hủy mượn?')) return;
          $.ajax({
            url: '/huyMuon',
            method: 'POST',
            data: { id: id },
            success: function (response) {
              if (response.success) {
                alert('Hủy mượn thành công!');
                bootstrap.Modal.getInstance(document.getElementById('roomModal')).hide();
                loadPhongHoc();
              } else {
                alert(response.message || 'Không thể hủy mượn.');
              }
            },
            error: function () {
              alert('Lỗi server khi hủy mượn.');
            }
          });
        });
      });
    </script>
  </body>
</html>
