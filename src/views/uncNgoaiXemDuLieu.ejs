      actionCell.innerHTML = `
        <button type="button" class="btn btn-sm btn-success" onclick="saveEditDetailRow(this, '${tabType}')" title="Lưu">
          <i class="fas fa-check"></i>
        </button>
        <button type="button" class="btn btn-sm btn-outline-secondary" onclick="cancelEditDetailRow(this, '${tabType}')" title="Hủy">
          <i class="fas fa-times"></i>
        </button>
      `;
    }

    // Lưu sửa đổi trực tiếp trên bảng
    function saveEditDetailRow(button, tabType) {
      const row = button.closest('tr');
      const isMatMa = tabType === 'mat-ma';
      const hedaotao = tabType === 'dong-hoc-phi' ? 'Đóng học phí' : 'Mật mã';

      // Lấy giá trị từ input
      const data = {
        sounc: parseInt(row.dataset.sounc),
        stt: parseInt(row.dataset.stt),
        niendons: row.dataset.niendons || null,
        hedaotao: hedaotao,
        dvnt: row.querySelector('.cell-dvnt input').value.trim(),
        stk: row.querySelector('.cell-stk input').value.trim(),
        nganhang: row.querySelector('.cell-nganhang input').value.trim(),
        sotien: parseInt(row.querySelector('.cell-sotien input').value) || 0,
        noidung: row.querySelector('.cell-noidung input').value.trim()
      };

      if (isMatMa) {
        data.manguonns = row.querySelector('.cell-manguonns input').value.trim() || null;
        data.niendons = row.querySelector('.cell-niendons input').value.trim() || null;
        data.diachi = row.querySelector('.cell-diachi input').value.trim() || null;
        data.nguoinhantien = row.querySelector('.cell-nguoinhantien input').value.trim() || null;
        data.cccd = row.querySelector('.cell-cccd input').value.trim() || null;
        data.ngaycap = row.querySelector('.cell-ngaycap input').value || null;
        data.noicap = row.querySelector('.cell-noicap input').value.trim() || null;
      }

      // Validate
      if (!data.dvnt || !data.stk || !data.nganhang || !data.sotien || !data.noidung) {
        Swal.fire({
          title: 'Thông báo',
          text: 'Vui lòng nhập đầy đủ thông tin bắt buộc',
          icon: 'warning'
        });
        return;
      }

      fetch('/uy-nhiem-chi/unc-ngoai/xem-du-lieu/api/update-detail', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(data)
      })
        .then(response => response.json())
        .then(result => {
          if (result.success) {
            Swal.fire({
              title: 'Thành công',
              text: 'Đã cập nhật bản ghi thành công',
              icon: 'success'
            });
            // Reload danh sách với trang hiện tại
            const tbodyId = tabType === 'dong-hoc-phi' ? 'detail-list-tbody-dhp' : 'detail-list-tbody-mm';
            const currentPage = tabType === 'dong-hoc-phi' ? currentPageDHP : currentPageMM;
            loadDetailList(tabType, hedaotao, isMatMa, tbodyId, currentPage);
          } else {
            Swal.fire({
              title: 'Lỗi',
              text: result.message || 'Không thể cập nhật bản ghi',
              icon: 'error'
            });
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire({
            title: 'Lỗi',
            text: 'Có lỗi xảy ra khi cập nhật bản ghi',
            icon: 'error'
          });
        });
    }

    // Hủy sửa đổi
    function cancelEditDetailRow(button, tabType) {
      const row = button.closest('tr');
      const original = JSON.parse(row.dataset.originalData || '{}');
      const isMatMa = tabType === 'mat-ma';

      // Khôi phục giá trị ban đầu
      row.querySelector('.cell-dvnt').textContent = original.dvnt || '';
      row.querySelector('.cell-stk').textContent = original.stk || '';
      row.querySelector('.cell-nganhang').textContent = original.nganhang || '';
      row.querySelector('.cell-sotien').textContent = original.sotien ? parseInt(original.sotien).toLocaleString('vi-VN') : '';
      row.querySelector('.cell-noidung').textContent = original.noidung || '';

      if (isMatMa) {
        row.querySelector('.cell-manguonns').textContent = original.manguonns || '';
        row.querySelector('.cell-niendons').textContent = original.niendons || '';
        row.querySelector('.cell-diachi').textContent = original.diachi || '';
        row.querySelector('.cell-nguoinhantien').textContent = original.nguoinhantien || '';
        row.querySelector('.cell-cccd').textContent = original.cccd || '';
        if (original.ngaycap) {
          const date = new Date(original.ngaycap);
          row.querySelector('.cell-ngaycap').textContent = date.toLocaleDateString('vi-VN');
        } else {
          row.querySelector('.cell-ngaycap').textContent = '';
        }
        row.querySelector('.cell-noicap').textContent = original.noicap || '';
      }

      // Khôi phục nút thao tác
      const actionCell = row.querySelector('td:last-child');
      actionCell.innerHTML = `
        <button type="button" class="btn btn-sm btn-warning" onclick="enterEditDetailRow(this, '${tabType}')" title="Sửa">
          <i class="fas fa-edit"></i>
        </button>
        <button type="button" class="btn btn-sm btn-danger" onclick="deleteDetailRow(this, '${tabType}')" title="Xóa">
          <i class="fas fa-trash"></i>
        </button>
      `;

      row.classList.remove('editing');
      delete row.dataset.originalData;
    }

    // Xóa dòng trong danh sách
    function deleteDetailRow(button, tabType) {
      const row = button.closest('tr');
      const sounc = row.dataset.sounc;
      const stt = row.dataset.stt;
      const niendons = row.dataset.niendons;

      Swal.fire({
        title: 'Xác nhận xóa',
        text: 'Bạn có chắc chắn muốn xóa bản ghi này?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Xóa',
        cancelButtonText: 'Hủy'
      }).then((result) => {
        if (!result.isConfirmed) return;

        fetch('/uy-nhiem-chi/unc-ngoai/xem-du-lieu/api/delete-selected', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            ids: [{
              sounc: parseInt(sounc),
              stt: parseInt(stt),
              niendons: niendons || null
            }]
          })
        })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              Swal.fire({
                title: 'Thành công',
                text: 'Đã xóa bản ghi thành công',
                icon: 'success'
              });
              const tbodyId = tabType === 'dong-hoc-phi' ? 'detail-list-tbody-dhp' : 'detail-list-tbody-mm';
              const currentPage = tabType === 'dong-hoc-phi' ? currentPageDHP : currentPageMM;
              loadDetailList(tabType, tabType === 'dong-hoc-phi' ? 'Đóng học phí' : 'Mật mã', tabType === 'mat-ma', tbodyId, currentPage);
            } else {
              Swal.fire({
                title: 'Lỗi',
                text: data.message || 'Không thể xóa bản ghi',
                icon: 'error'
              });
            }
          })
          .catch(error => {
            console.error('Error:', error);
            Swal.fire({
              title: 'Lỗi',
              text: 'Có lỗi xảy ra khi xóa bản ghi',
              icon: 'error'
            });
          });
      });
    }
  </script>
