<!DOCTYPE html>
<html lang="vi">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Học Viện Kỹ Thuật Mật Mã - UNC ngoài - Xem dữ liệu</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
  
  <!-- SweetAlert2 CSS -->
  <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.16/dist/sweetalert2.min.css" rel="stylesheet" />
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.16/dist/sweetalert2.all.min.js"></script>

  <style>
    .nav-tabs .nav-link {
      cursor: pointer;
    }
    /* Nền form nhập (phần xung quanh các ô input) */
    .card {
      background-color: #ffffff !important;
    }
    .card-body {
      background-color: #ffffff !important; /* Nền trắng cho form */
    }
    .tab-content {
      background-color: #ffffff !important;
      padding: 15px;
      border-radius: 5px;
    }
    form {
      background-color: #ffffff;
    }
    .form-label {
      font-weight: 500;
      color: #0d6efd; /* Màu xanh cho label */
      margin-bottom: 5px; /* Cách label với input một chút */
      font-size: 0.9rem; /* Nhỏ lại */
    }
    .form-control {
      background-color: #ffffff; /* Nền trắng cho ô input */
      color: #212529; /* Chữ đen để dễ đọc */
      border: 1px solid #0d6efd; /* Viền xanh */
      margin-bottom: 8px; /* Cách các ô với nhau */
      padding: 0.4rem 0.6rem; /* Giảm padding để ô nhỏ lại */
      font-size: 0.875rem; /* Font nhỏ lại */
      height: calc(1.5em + 0.8rem + 2px); /* Giảm chiều cao */
    }
    .form-control:focus {
      background-color: #ffffff;
      color: #212529;
      border-color: #0d6efd;
      box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }
    .form-control[readonly] {
      background-color: #f8f9fa;
      color: #212529;
      border-color: #0d6efd;
    }
    .form-control::placeholder {
      color: #6c757d;
      font-size: 0.875rem;
    }
    .row.g-3 {
      margin-left: -8px;
      margin-right: -8px;
    }
    .row.g-3 > [class*="col-"] {
      padding-left: 8px;
      padding-right: 8px;
    }
    /* Bảng chiếm toàn bộ chiều rộng */
    #detail-list-wrapper-dhp,
    #detail-list-wrapper-mm {
      width: 100%;
      background-color: #ffffff !important;
      padding: 15px;
      border-radius: 5px;
    }

    /* Căn giữa nội dung trong các ô bảng */
    #detail-list-wrapper-dhp table td,
    #detail-list-wrapper-dhp table th,
    #detail-list-wrapper-mm table td,
    #detail-list-wrapper-mm table th {
      text-align: center;
      vertical-align: middle;
    }

    /* Màu nền bảng giống bên thêm người thụ hưởng */
    #detail-list-wrapper-dhp .table,
    #detail-list-wrapper-mm .table {
      background-color: #ffffff !important;
    }

    #detail-list-wrapper-dhp .table thead.table-light,
    #detail-list-wrapper-mm .table thead.table-light {
      background-color: #f8f9fa !important;
    }
    
    #detail-list-wrapper-dhp .table-responsive,
    #detail-list-wrapper-mm .table-responsive {
      background-color: #ffffff !important;
    }

    #detail-list-wrapper-dhp .table tbody tr:nth-of-type(odd),
    #detail-list-wrapper-mm .table tbody tr:nth-of-type(odd) {
      background-color: #ffffff;
    }

    #detail-list-wrapper-dhp .table tbody tr:nth-of-type(even),
    #detail-list-wrapper-mm .table tbody tr:nth-of-type(even) {
      background-color: #f8f9fa;
    }

    #detail-list-wrapper-dhp .table tbody tr:hover,
    #detail-list-wrapper-mm .table tbody tr:hover {
      background-color: #e9ecef;
    }

    /* Thu nhỏ nút trong ô thao tác */
    #detail-list-wrapper-dhp .btn-sm,
    #detail-list-wrapper-mm .btn-sm {
      padding: 0.15rem 0.3rem;
      font-size: 0.75rem;
      line-height: 1.2;
    }

    #detail-list-wrapper-dhp .btn-sm i,
    #detail-list-wrapper-mm .btn-sm i {
      font-size: 0.7rem;
    }
  </style>
</head>

<body>
  <%- include('header') %>

  <div class="container-fluid my-4" style="padding-left: 20px">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-table me-2"></i>UNC ngoài - Xem dữ liệu
        </h5>
      </div>
      <div class="card-body">
        <!-- Tab Navigation -->
        <ul class="nav nav-tabs mb-4" id="uncTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="dong-hoc-phi-tab" data-bs-toggle="tab" data-bs-target="#dong-hoc-phi" type="button" role="tab">
              <i class="fas fa-graduation-cap me-1"></i>Đóng học phí
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="mat-ma-tab" data-bs-toggle="tab" data-bs-target="#mat-ma" type="button" role="tab">
              <i class="fas fa-key me-1"></i>Mật mã
            </button>
          </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="uncTabContent">
          <!-- Tab Đóng học phí -->
          <div class="tab-pane fade show active" id="dong-hoc-phi" role="tabpanel">
            <form id="form-dong-hoc-phi" class="row g-3">
              <div class="col-md-2">
                <label for="stt-dhp" class="form-label"><strong>STT</strong><span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="stt-dhp" name="stt" placeholder="Nhập STT" required>
              </div>
              <div class="col-md-4">
                <label for="dvnt-dhp" class="form-label"><strong>Đơn vị nhận tiền</strong></label>
                <input type="text" class="form-control" id="dvnt-dhp" name="dvnt" placeholder="Nhập STT hoặc Đơn vị nhận tiền">
              </div>
              <div class="col-md-3">
                <label for="stk-dhp" class="form-label"><strong>Số tài khoản</strong></label>
                <input type="text" class="form-control" id="stk-dhp" name="stk" readonly>
              </div>
              <div class="col-md-3">
                <label for="nganhang-dhp" class="form-label"><strong>Tại ngân hàng</strong></label>
                <input type="text" class="form-control" id="nganhang-dhp" name="nganhang" readonly>
              </div>
              <div class="col-md-3">
                <label for="sotien-dhp" class="form-label"><strong>Số tiền</strong><span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="sotien-dhp" name="sotien" placeholder="Nhập số tiền" required>
              </div>
              <div class="col-md-9">
                <label for="sotien-chu-dhp" class="form-label"><strong>Số tiền bằng chữ</strong></label>
                <input type="text" class="form-control" id="sotien-chu-dhp" name="sotienchu" readonly>
              </div>
              <div class="col-md-12">
                <label for="noidung-dhp" class="form-label"><strong>Nội dung chi</strong><span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="noidung-dhp" name="noidung" placeholder="Nhập nội dung chi" required>
              </div>
              <div class="col-12 mt-3">
                <button type="button" class="btn btn-primary" onclick="saveUNCNgoaiDetail('dong-hoc-phi')">
                  <i class="fas fa-save me-1"></i>Lưu
                </button>
                <button type="button" class="btn btn-success ms-2" onclick="exportExcel('dong-hoc-phi')">
                  <i class="fas fa-file-excel me-1"></i>Xuất file Excel
                </button>
              </div>
            </form>
            
            <!-- Bảng danh sách cho tab Đóng học phí -->
            <div id="detail-list-wrapper-dhp" class="mt-4" style="display: block;">
              <h6><i class="fas fa-table me-1"></i>Danh sách UNC ngoài - Đóng học phí</h6>
              <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 60px;">STT</th>
                      <th>Đơn vị nhận tiền</th>
                      <th>Số tài khoản</th>
                      <th>Ngân hàng</th>
                      <th style="width: 120px;">Số tiền</th>
                      <th>Nội dung chi</th>
                      <th style="width: 100px;">Thao tác</th>
                    </tr>
                  </thead>
                  <tbody id="detail-list-tbody-dhp">
                  </tbody>
                </table>
              </div>
              <!-- Phân trang -->
              <nav aria-label="Phân trang" class="mt-3">
                <ul class="pagination justify-content-center" id="pagination-dhp">
                </ul>
              </nav>
            </div>
          </div>

          <!-- Tab Mật mã -->
          <div class="tab-pane fade" id="mat-ma" role="tabpanel">
            <form id="form-mat-ma" class="row g-3">
              <div class="col-md-2">
                <label for="stt-mm" class="form-label"><strong>STT</strong><span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="stt-mm" name="stt" placeholder="Nhập STT" required>
              </div>
              <div class="col-md-4">
                <label for="dvnt-mm" class="form-label"><strong>Đơn vị nhận tiền</strong></label>
                <input type="text" class="form-control" id="dvnt-mm" name="dvnt" placeholder="Nhập STT hoặc Đơn vị nhận tiền">
              </div>
              <div class="col-md-3">
                <label for="stk-mm" class="form-label"><strong>Số tài khoản</strong></label>
                <input type="text" class="form-control" id="stk-mm" name="stk" readonly>
              </div>
              <div class="col-md-3">
                <label for="nganhang-mm" class="form-label"><strong>Tại ngân hàng</strong></label>
                <input type="text" class="form-control" id="nganhang-mm" name="nganhang" readonly>
              </div>
              <div class="col-md-3">
                <label for="sotien-mm" class="form-label"><strong>Số tiền</strong><span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="sotien-mm" name="sotien" placeholder="Nhập số tiền" required>
              </div>
              <div class="col-md-9">
                <label for="sotien-chu-mm" class="form-label"><strong>Số tiền bằng chữ</strong></label>
                <input type="text" class="form-control" id="sotien-chu-mm" name="sotienchu" readonly>
              </div>
              <div class="col-md-12">
                <label for="noidung-mm" class="form-label"><strong>Nội dung chi</strong><span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="noidung-mm" name="noidung" placeholder="Nhập nội dung chi" required>
              </div>
              <div class="col-md-3">
                <label for="manguonns-mm" class="form-label"><strong>Mã nguồn NS</strong></label>
                <input type="text" class="form-control" id="manguonns-mm" name="manguonns" placeholder="Nhập mã nguồn NS">
              </div>
              <div class="col-md-3">
                <label for="niendons-mm" class="form-label"><strong>Niên độ NS</strong></label>
                <input type="text" class="form-control" id="niendons-mm" name="niendons" placeholder="Nhập niên độ NS">
              </div>
              <div class="col-md-6">
                <label for="diachi-mm" class="form-label"><strong>Địa chỉ</strong></label>
                <input type="text" class="form-control" id="diachi-mm" name="diachi" placeholder="Nhập địa chỉ">
              </div>
              <div class="col-md-4">
                <label for="nguoinhantien-mm" class="form-label"><strong>Người nhận tiền</strong></label>
                <input type="text" class="form-control" id="nguoinhantien-mm" name="nguoinhantien" placeholder="Nhập tên người nhận tiền">
              </div>
              <div class="col-md-3">
                <label for="cccd-mm" class="form-label"><strong>CCCD</strong></label>
                <input type="text" class="form-control" id="cccd-mm" name="cccd" placeholder="Nhập số CCCD">
              </div>
              <div class="col-md-3">
                <label for="ngaycap-mm" class="form-label"><strong>Ngày cấp</strong></label>
                <input type="date" class="form-control" id="ngaycap-mm" name="ngaycap">
              </div>
              <div class="col-md-2">
                <label for="noicap-mm" class="form-label"><strong>Nơi cấp</strong></label>
                <input type="text" class="form-control" id="noicap-mm" name="noicap" placeholder="Nhập nơi cấp">
              </div>
              <div class="col-12 mt-3">
                <button type="button" class="btn btn-primary" onclick="saveUNCNgoaiDetail('mat-ma')">
                  <i class="fas fa-save me-1"></i>Lưu
                </button>
                <button type="button" class="btn btn-success ms-2" onclick="exportExcel('mat-ma')">
                  <i class="fas fa-file-excel me-1"></i>Xuất file Excel
                </button>
              </div>
            </form>
            
            <!-- Bảng danh sách cho tab Mật mã -->
            <div id="detail-list-wrapper-mm" class="mt-4" style="display: block;">
              <h6><i class="fas fa-table me-1"></i>Danh sách UNC ngoài - Mật mã</h6>
              <div class="table-responsive">
                <table class="table table-bordered table-striped table-hover">
                  <thead class="table-light">
                    <tr>
                      <th style="width: 60px;">STT</th>
                      <th>Đơn vị nhận tiền</th>
                      <th>Số tài khoản</th>
                      <th>Ngân hàng</th>
                      <th style="width: 120px;">Số tiền</th>
                      <th>Nội dung chi</th>
                      <th>Mã nguồn NS</th>
                      <th>Niên độ NS</th>
                      <th>Địa chỉ</th>
                      <th>Người nhận tiền</th>
                      <th>CCCD</th>
                      <th>Ngày cấp</th>
                      <th>Nơi cấp</th>
                      <th style="width: 100px;">Thao tác</th>
                    </tr>
                  </thead>
                  <tbody id="detail-list-tbody-mm">
                  </tbody>
                </table>
              </div>
              <!-- Phân trang -->
              <nav aria-label="Phân trang" class="mt-3">
                <ul class="pagination justify-content-center" id="pagination-mm">
                </ul>
              </nav>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Biến lưu trang hiện tại
    let currentPageDHP = 1;
    let currentPageMM = 1;

    // Tự động load dữ liệu khi trang được tải
    document.addEventListener('DOMContentLoaded', function() {
      // Load dữ liệu cho tab Đóng học phí
      loadDetailList('dong-hoc-phi', 'Đóng học phí', false, 'detail-list-tbody-dhp', 1);
      // Load dữ liệu cho tab Mật mã
      loadDetailList('mat-ma', 'Mật mã', true, 'detail-list-tbody-mm', 1);
    });

    // Khi nhập STT, tự động load thông tin từ bảng uncngoai
    document.getElementById('stt-dhp').addEventListener('blur', function() {
      if (this.value) {
        loadUNCNgoaiInfo(this.value, 'dong-hoc-phi', 'stt');
      }
    });
    document.getElementById('stt-mm').addEventListener('blur', function() {
      if (this.value) {
        loadUNCNgoaiInfo(this.value, 'mat-ma', 'stt');
      }
    });

    // Khi nhập Đơn vị nhận tiền, tự động load thông tin từ bảng uncngoai
    document.getElementById('dvnt-dhp').addEventListener('blur', function() {
      if (this.value && this.value.trim()) {
        loadUNCNgoaiInfo(this.value.trim(), 'dong-hoc-phi', 'dvnt');
      }
    });
    document.getElementById('dvnt-mm').addEventListener('blur', function() {
      if (this.value && this.value.trim()) {
        loadUNCNgoaiInfo(this.value.trim(), 'mat-ma', 'dvnt');
      }
    });

    // Khi nhập số tiền, tự động chuyển sang chữ
    document.getElementById('sotien-dhp').addEventListener('input', function() {
      convertNumberToWords(this.value, 'dong-hoc-phi');
    });
    document.getElementById('sotien-mm').addEventListener('input', function() {
      convertNumberToWords(this.value, 'mat-ma');
    });

    // Load thông tin từ bảng uncngoai theo STT hoặc ĐVNT
    function loadUNCNgoaiInfo(value, tabType, searchType) {
      if (!value) return;

      const hedaotao = tabType === 'dong-hoc-phi' ? 'Đóng học phí' : 'Mật mã';
      const prefix = tabType === 'dong-hoc-phi' ? 'dhp' : 'mm';
      const queryParam = searchType === 'stt' ? `stt=${value}` : `dvnt=${encodeURIComponent(value)}`;

      fetch(`/uy-nhiem-chi/unc-ngoai/xem-du-lieu/api/get-uncngoai-info?${queryParam}`)
        .then(response => response.json())
        .then(data => {
          if (data.success && data.data) {
            // Fill thông tin từ uncngoai
            if (searchType === 'stt') {
              document.getElementById(`stt-${prefix}`).value = data.data.stt || '';
            } else {
              document.getElementById(`stt-${prefix}`).value = data.data.stt || '';
            }
            document.getElementById(`dvnt-${prefix}`).value = data.data.dvnt || '';
            document.getElementById(`stk-${prefix}`).value = data.data.stk || '';
            document.getElementById(`nganhang-${prefix}`).value = data.data.nganhang || '';

            // Kiểm tra và fill sotien từ uncngoaidetail (bản ghi mới nhất)
            if (data.data.stt) {
              fetch(`/uy-nhiem-chi/unc-ngoai/xem-du-lieu/api/get-latest-sotien?stt=${data.data.stt}&hedaotao=${encodeURIComponent(hedaotao)}`)
                .then(response => response.json())
                .then(sotienData => {
                  if (sotienData.success && sotienData.data && sotienData.data.sotien) {
                    document.getElementById(`sotien-${prefix}`).value = sotienData.data.sotien;
                    convertNumberToWords(sotienData.data.sotien, tabType);
                  }
                })
                .catch(error => {
                  console.error('Error getting sotien:', error);
                });
            }
          } else {
            Swal.fire({
              title: 'Thông báo',
              text: data.message || `Không tìm thấy thông tin với ${searchType === 'stt' ? 'STT' : 'Đơn vị nhận tiền'} này`,
              icon: 'warning'
            });
            if (searchType === 'stt') {
              document.getElementById(`stt-${prefix}`).value = '';
            }
            document.getElementById(`dvnt-${prefix}`).value = '';
            document.getElementById(`stk-${prefix}`).value = '';
            document.getElementById(`nganhang-${prefix}`).value = '';
          }
        })
        .catch(error => {
          console.error('Error:', error);
        });
    }

    // Chuyển số tiền sang chữ
    function convertNumberToWords(amount, tabType) {
      if (!amount || amount <= 0) {
        const prefix = tabType === 'dong-hoc-phi' ? 'dhp' : 'mm';
        document.getElementById(`sotien-chu-${prefix}`).value = '';
        return;
      }

      fetch('/uy-nhiem-chi/unc-ngoai/xem-du-lieu/api/convert-to-words', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ amount: parseInt(amount) })
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            const prefix = tabType === 'dong-hoc-phi' ? 'dhp' : 'mm';
            document.getElementById(`sotien-chu-${prefix}`).value = data.words || '';
          }
        })
        .catch(error => {
          console.error('Error:', error);
        });
    }

    // Lưu dữ liệu vào bảng uncngoaidetail
    function saveUNCNgoaiDetail(tabType) {
      const prefix = tabType === 'dong-hoc-phi' ? 'dhp' : 'mm';
      const hedaotao = tabType === 'dong-hoc-phi' ? 'Đóng học phí' : 'Mật mã';
      
      const formData = {
        hedaotao,
        stt: document.getElementById(`stt-${prefix}`).value,
        dvnt: document.getElementById(`dvnt-${prefix}`).value,
        stk: document.getElementById(`stk-${prefix}`).value,
        nganhang: document.getElementById(`nganhang-${prefix}`).value,
        sotien: document.getElementById(`sotien-${prefix}`).value,
        noidung: document.getElementById(`noidung-${prefix}`).value
      };

      // Validate
      if (!formData.stt || !formData.sotien || !formData.noidung) {
        Swal.fire({
          title: 'Thông báo',
          text: 'Vui lòng nhập đầy đủ STT, Số tiền và Nội dung chi',
          icon: 'warning'
        });
        return;
      }

      // Nếu là tab Mật mã, thêm các trường khác
      if (tabType === 'mat-ma') {
        formData.manguonns = document.getElementById('manguonns-mm').value || null;
        formData.niendons = document.getElementById('niendons-mm').value || null;
        formData.diachi = document.getElementById('diachi-mm').value || null;
        formData.nguoinhantien = document.getElementById('nguoinhantien-mm').value || null;
        formData.cccd = document.getElementById('cccd-mm').value || null;
        formData.ngaycap = document.getElementById('ngaycap-mm').value || null;
        formData.noicap = document.getElementById('noicap-mm').value || null;
      }

      fetch('/uy-nhiem-chi/unc-ngoai/xem-du-lieu/api/save', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify(formData)
      })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire({
              title: 'Thành công',
              text: data.message || 'Đã lưu dữ liệu thành công',
