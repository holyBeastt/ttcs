        })
          .then((response) => {
            if (!response.ok) {
              throw new Error("Gửi dữ liệu thất bại");
            }
            return response.json();
          })
          .then((data) => {
            if (data.success) {
              Swal.fire({
                title: "Thông báo",
                html: "Thêm file thành công",
