      // H√†m sinh HTML string cho 1 nh√≥m gi·∫£ng vi√™n
      function generateGroupHTML(teacherName, courses, index, totalSoTiet) {
        return courses.map((course, idx) => {
          const isFirstRow = idx === 0;
          const rowSpan = isFirstRow ? `rowspan="${courses.length}"` : "";
          const alertClass = (course.TongSoTietCaNam > 300) ? "alert-sotiet" : "";
          
          // C√°c c·ªôt d√πng chung (First row cells)
          const firstRowCells = isFirstRow ? `
