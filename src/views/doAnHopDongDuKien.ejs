          },
          body: JSON.stringify(body), // G·ª≠i Khoa trong body
        })
          .then((response) => {
            if (!response.ok) {
              throw new Error(
                "Network response was not ok: " + response.statusText
              );
            }
            return response.json();
          })
          .then((data) => {
           // 1. X·ª≠ l√Ω logic hi·ªÉn th·ªã/·∫©n th√¥ng b√°o
            const noDataMsg = document.getElementById("no-data-message");
            if (!data || data.length === 0 || Object.keys(data.groupedByTeacher).length === 0) {
              if(noDataMsg) noDataMsg.style.display = "block";
              document.getElementById("tbody-civilian").innerHTML = "";
              document.getElementById("tbody-military").innerHTML = "";
              return;
            }
            if(noDataMsg) noDataMsg.style.display = "none";

            // 2. C·∫≠p nh·∫≠t th√¥ng tin ph·ª• (S·ªë Qƒê, T·ªïng)
            updateSoQD(data.SoQDList);
            SoTietDinhMuc = data.SoTietDinhMuc; // Bi·∫øn global n·∫øu c·∫ßn

            // 3. Render b·∫£ng (Phi√™n b·∫£n t·ªëi ∆∞u)
            renderTable(data.groupedByTeacher);
          })
          .catch((error) => {
