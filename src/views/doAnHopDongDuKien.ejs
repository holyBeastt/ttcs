      function renderTable(groupedData) {
        // B1: Ph√¢n lo·∫°i d·ªØ li·ªáu th√†nh 2 m·∫£ng html string
        let civilianHTML = "";
        let militaryHTML = "";
        
        let indexCivilian = 1;
        let indexMilitary = 1;

        Object.keys(groupedData).forEach((teacher) => {
          const courses = groupedData[teacher];
          if (!courses || courses.length === 0) return;

          // Ki·ªÉm tra lo·∫°i gi·∫£ng vi√™n (Qu√¢n s·ª± hay D√¢n s·ª±)
          const isMilitary = (courses[0].isQuanDoi == 1 || courses[0].isQuanDoi == '1');
          
          // T√≠nh t·ªïng s·ªë ti·∫øt c·ªßa GV n√†y
          const totalSoTiet = courses.reduce((sum, c) => sum + (parseFloat(c.SoTiet) || 0), 0);
          
          // T·∫°o HTML cho nh√≥m gi·∫£ng vi√™n n√†y
          // Ch·ªçn index t∆∞∆°ng ·ª©ng
          const currentIndex = isMilitary ? indexMilitary++ : indexCivilian++;
          
          // H√†m t·∫°o chu·ªói HTML cho c√°c d√≤ng
          const groupRowsHTML = generateGroupHTML(teacher, courses, currentIndex, totalSoTiet);

          // C·ªông d·ªìn v√†o chu·ªói HTML t·ªïng (Nhanh h∆°n appendChild)
          if (isMilitary) {
            militaryHTML += groupRowsHTML;
          } else {
            civilianHTML += groupRowsHTML;
          }
