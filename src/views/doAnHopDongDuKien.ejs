        // B2: Render ra DOM 1 l·∫ßn duy nh·∫•t (T·ªëi ∆∞u Performance)
        document.getElementById("tbody-civilian").innerHTML = civilianHTML;
        document.getElementById("tbody-military").innerHTML = militaryHTML;

        // B3: T√≠nh t·ªïng footer
        calculateTotals();
