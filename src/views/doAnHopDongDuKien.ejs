          let rowKi = cells[2].textContent.trim(); // K√¨
          let rowNam = cells[3].textContent.trim(); // NƒÉm

          // Logic l·ªçc
          let matchesDepartment =
            department === "" || rowDepartment === department;
          let matchesDot = dot === "" || rowDot === dot;
          let matchesKi = ki === "" || rowKi === ki;
          let matchesNam = nam === "" || rowNam === nam; // Ki·ªÉm tra nƒÉm

          // Hi·ªÉn th·ªã ho·∫∑c ·∫©n h√†ng d·ª±a tr√™n k·∫øt qu·∫£ l·ªçc
          if (matchesDepartment && matchesDot && matchesKi && matchesNam) {
            row.style.display = ""; // Hi·ªÉn th·ªã h√†ng
          } else {
            row.style.display = "none"; // ·∫®n h√†ng
