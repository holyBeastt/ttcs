        // Nếu giá trị mới là rỗng thì xóa khỏi editedData (nếu có)
        const editKey = `${rowIndex}-${colName}`;
        if (newValue === "") {
          editedData.delete(editKey);
          cell.style.backgroundColor = ""; // Bỏ highlight
          return;
        }

        // Don't track if value hasn't changed
        if (newValue === originalValue) {
          editedData.delete(editKey);
          cell.style.backgroundColor = "";
          return;
        }

        // Store the edit
        editedData.set(editKey, {
          rowIndex: parseInt(rowIndex),
          colName: "GiaoVien", // Sửa lại tên cột để lưu vào database
          newValue: newValue,
