            daotaoCheckbox.prop('disabled', false);
          }
        }
        
        // Cập nhật checkbox BGD
        if (canApproveBGD) {
          // Lấy lại trạng thái của checkbox đào tạo sau khi có thể đã bị thay đổi
          const finalDaotaoIsChecked = daotaoCheckbox.is(':checked');
          if (!khoaIsChecked || !finalDaotaoIsChecked) {
            bgdCheckbox.prop('disabled', true);
            if (bgdCheckbox.is(':checked')) {
              bgdCheckbox.prop('checked', false);
              if (pendingApprovalChanges[requestId]) pendingApprovalChanges[requestId]['bgd'] = false;
            }
          } else {
            bgdCheckbox.prop('disabled', false);
          }
        }
      }

      // Khi tick vào checkbox duyệt
      $(document).on('change', '.approval-checkbox', function() {
        const requestId = $(this).data('request-id');
        const approvalType = $(this).data('type');
        const isChecked = $(this).is(':checked');

        if (!pendingApprovalChanges[requestId]) pendingApprovalChanges[requestId] = {};
        pendingApprovalChanges[requestId][approvalType] = isChecked;

        // Cập nhật trạng thái của các checkbox khác trong cùng dòng
        updateRowApprovalState($(this).closest('tr'));
      });

      // Khi tick vào "check all"
      $(document).on('change', '#check-all-khoa-duyet', function() {
        const checked = this.checked;
        $('input.approval-checkbox[data-type="khoa"]:not(:disabled)').each(function() {
          $(this).prop('checked', checked).trigger('change');
        });
      });
      $(document).on('change', '#check-all-daotao-duyet', function() {
        const checked = this.checked;
        $('input.approval-checkbox[data-type="daotao"]:not(:disabled)').each(function() {
          $(this).prop('checked', checked).trigger('change');
        });
      });
      $(document).on('change', '#check-all-bgd-duyet', function() {
        const checked = this.checked;
        $('input.approval-checkbox[data-type="bgd"]:not(:disabled)').each(function() {
          $(this).prop('checked', checked).trigger('change');
        });
      });
    </script>

    <script>
      function setApprovalHeaderCheckboxesPermission() {
        const userRole = localStorage.getItem("userRole");
        const isKhoa = localStorage.getItem("isKhoa");
        const MaPhongBan = localStorage.getItem("MaPhongBan");

        const isLanhDaoKhoa = userRole === "Lãnh đạo khoa" && isKhoa === "1";
        const isDuyetDaoTao = userRole === "Duyệt" && MaPhongBan === "DAOTAO";
        const isThuongBGD = userRole === "Thường";

        const canApproveKhoa = isLanhDaoKhoa || isDuyetDaoTao || isThuongBGD;
        const canApproveDaoTao = isDuyetDaoTao || isThuongBGD;
        const canApproveBGD = isThuongBGD;

        $('#check-all-khoa-duyet').prop('disabled', !canApproveKhoa);
        $('#check-all-daotao-duyet').prop('disabled', !canApproveDaoTao);
        $('#check-all-bgd-duyet').prop('disabled', !canApproveBGD);
      }

      $(document).ready(function() {
        setApprovalHeaderCheckboxesPermission();

        const userRole = localStorage.getItem("userRole");
        if (userRole === "Thường") {
          document.getElementById("publish-all-btn").style.display = "inline-block";
        }
      });
    </script>

    <script>
      $('#save-approval-btn').on('click', async function() {
        const updates = [];
        for (const requestId in pendingApprovalChanges) {
          for (const approvalType in pendingApprovalChanges[requestId]) {
            updates.push({
              requestId,
              approvalType,
              isApproved: pendingApprovalChanges[requestId][approvalType]
            });
          }
        }
        if (updates.length === 0) {
          Swal.fire({title: "Thông báo", text: "Không có thay đổi nào để cập nhật!", icon: "info"});
          return;
        }

        try {
          for (const update of updates) {
            await fetch('/update-quy-chuan-approval', {
              method: 'POST',
              headers: {'Content-Type': 'application/json'},
              body: JSON.stringify(update)
            });
          }
          Swal.fire({title: "Thành công", text: "Đã cập nhật duyệt!", icon: "success"});
          pendingApprovalChanges = {};
          loadEditRequests(); // reload lại bảng để lấy trạng thái mới nhất từ server
        } catch (error) {
          Swal.fire({title: "Lỗi", text: "Có lỗi khi cập nhật duyệt!", icon: "error"});
        }
      });
    </script>

    <script>
      document.getElementById("publish-all-btn").addEventListener("click", async function() {
        // Lấy tất cả các request đã đủ duyệt và chưa ban hành
        const rows = document.querySelectorAll("#edit-requests-body tr");
        const requestsToPublish = [];
        for (const row of rows) {
          // Lấy các cell
          const cells = row.querySelectorAll("td");
          if (cells.length < 11) continue; // bỏ qua dòng không hợp lệ

          // Lấy trạng thái duyệt
          const khoaDuyet = cells[8].querySelector("input")?.checked;
          const daotaoDuyet = cells[9].querySelector("input")?.checked;
          const bgdDuyet = cells[10].querySelector("input")?.checked;
          const status = cells[11].textContent.trim();
          // Lấy requestId từ 1 trong các checkbox
          const requestId = cells[8].querySelector("input")?.dataset.requestId;

          if (khoaDuyet && daotaoDuyet && bgdDuyet && status !== "Đã ban hành") {
            requestsToPublish.push(requestId);
          }
        }

        if (requestsToPublish.length === 0) {
          Swal.fire({title: "Thông báo", text: "Không có yêu cầu nào đủ điều kiện ban hành!", icon: "info"});
          return;
        }

        // Xác nhận
        const confirm = await Swal.fire({
          title: "Xác nhận",
          text: `Bạn có chắc chắn muốn ban hành ${requestsToPublish.length} yêu cầu đã đủ duyệt?`,
          icon: "question",
          showCancelButton: true,
          confirmButtonText: "Ban Hành",
          cancelButtonText: "Hủy"
        });
        if (!confirm.isConfirmed) return;

        // Gọi API cho từng requestId
        let successCount = 0;
        for (const requestId of requestsToPublish) {
          try {
            const response = await fetch("/apply-quy-chuan-edit", {
              method: "POST",
              headers: {"Content-Type": "application/json"},
              body: JSON.stringify({ requestId })
            });
            if (response.ok) successCount++;
          } catch (e) {}
        }

        Swal.fire({
          title: "Kết quả",
          text: `Đã ban hành thành công ${successCount}/${requestsToPublish.length} yêu cầu.`,
          icon: "success"
        });
        loadEditRequests();
      });
    </script>

