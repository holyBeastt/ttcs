  <h3 style="text-align: center; margin-top: 20px; ">Thống kê số đồ án tốt nghiệp theo giảng viên</h3>
  <canvas id="myChart"></canvas>

  <script>
      fetch('/data')
          .then(response => response.json())
          .then(data => {
              if (data.success) {
                  // Chuẩn bị dữ liệu cho biểu đồ
                  const labels = data.data.map(item => item.GiangVien || "Không rõ");
                  const values = data.data.map(item => item.soDoAn);

                  // Tạo biểu đồ
                  const ctx = document.getElementById('myChart').getContext('2d');
                  const myChart = new Chart(ctx, {
                      type: 'bar', // Biểu đồ cột
                      data: {
                          labels: labels,
                          datasets: [{
                              label: 'Số lượng đồ án',
                              data: values,
                              backgroundColor: 'blue',
                              borderColor: 'yellow',
                              borderWidth: 3
                          }]
                      },
                      options: {
                          responsive: true,
                          plugins: {
                              legend: {
                                  display: false
                              },
                              title: {
                                  display: true,
                                  text: 'Biểu đồ thống kê số lượng đồ án tốt nghiệp',
                                  font: { size: 20 },
                              }
                          },
                          scales: {
                              y: {
                                  beginAtZero: true,
                                  title: {
                                      display: true,
                                      text: 'Số lượng đồ án'
                                  }
                              },
                              x: {
                                  title: {
                                      display: true,
                                      text: 'Tên giảng viên',
                                      color: 'black',
                                      font: { size: 20 }
                                  },
                              }
                          }
                      }
                  });
              } else {
                  alert('Không thể tải dữ liệu từ server.');
              }
          })
          .catch(error => console.error('Lỗi:', error));
          </script>   

  <script>
