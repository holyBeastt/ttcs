        const soTietKTValue = parseFloat(soTietKTTd.textContent.trim());
        if (!isNaN(soTietKTValue)) {
          totalSoTietKT += soTietKTValue;
        }
      }
    });

    // Hiển thị tổng số tiết kiểm tra trong một phần tử có id `totalSoTietKT`
