<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>NCKH</title>

    <!-- Bootstrap 5 -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />

    <!-- AG Grid Styles -->
    <link rel="stylesheet" href="https://unpkg.com/ag-grid-community/styles/ag-grid.css" />
    <link rel="stylesheet" href="https://unpkg.com/ag-grid-community/styles/ag-theme-alpine.css" />

    <!-- SweetAlert2 -->
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.16/dist/sweetalert2.min.css" rel="stylesheet" />

    <!-- Flatpickr Date Picker -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />

    <!-- Custom Styles -->
    <link rel="stylesheet" href="/css/admin.css" />
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/css/nckh_v2.css" />
</head>

<body>
    <%- include('header') %>

        <div class="nckh-v2-container">
            <!-- Page Header -->
            <div class="page-header text-center">
                <h2 class="page-title">Danh Sách Nghiên Cứu Khoa Học</h2>
            </div>

            <!-- Chú thích trạng thái duyệt -->
            <div class="approval-legend d-flex align-items-center justify-content-center flex-wrap gap-4 mb-4">
                <div class="d-flex align-items-center gap-2">
                    <span class="fw-bold text-dark"><i class="fas fa-info-circle text-primary"></i> Trạng thái duyệt:</span>
                </div>
                <div class="legend-item d-flex align-items-center gap-2">
                    <div class="legend-box" style="width: 20px; height: 20px; background: #fff; border: 1px solid #dee2e6; border-radius: 4px;"></div>
                    <span>Chưa duyệt</span>
                </div>
                <div class="legend-item d-flex align-items-center gap-2">
                    <div class="legend-box" style="width: 20px; height: 20px; background: #fff3cd; border: 1px solid #ffecb5; border-radius: 4px;"></div>
                    <span>Khoa đã duyệt</span>
                </div>
                <div class="legend-item d-flex align-items-center gap-2">
                    <div class="legend-box" style="width: 20px; height: 20px; background: #d4edda; border: 1px solid #c3e6cb; border-radius: 4px;"></div>
                    <span>Viện NC đã duyệt</span>
                </div>
            </div>

            <!-- Unified Panel -->
            <div class="card">
                <div class="card-body p-4">
                    <div class="grid-toolbar">
                        <div style="flex: 1; max-width: 300px;">
                            <label class="form-label small fw-bold text-muted mb-1">CHỌN NĂM HỌC</label>
                            <select id="namHocXem" class="form-select namHoc"></select>
                        </div>
                        <button id="loadDataBtn" class="btn btn-primary d-flex align-items-center gap-2">
                            <i class="fas fa-sync-alt"></i>
                            <span>HIỂN THỊ DỮ LIỆU</span>
                        </button>
                    </div>

                    <div id="table-container" class="ag-theme-alpine w-100" style="height: calc(100vh - 350px); min-height: 500px;"></div>
                </div>
            </div>

            <!-- Modal Chi Tiết Chung -->
            <div class="modal fade" id="detailModal" tabindex="-1" aria-labelledby="detailModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content border-0 shadow">
                        <div class="modal-header bg-light">
                            <h5 class="modal-title" id="detailModalLabel">Chi Tiết Nghiên Cứu</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body p-4" id="detailModalBody">
                            <!-- Nội dung load từ JS -->
                        </div>
                        <div class="modal-footer bg-light border-0">
                            <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Đóng</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <!-- Scripts -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.6.16/dist/sweetalert2.all.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/vn.js"></script>
        <script src="/js/TKB/ag-grid-community.min.js"></script>

        <!-- NCKH V2 Utils -->
        <script src="/js/nckh_themmoi/utils.js"></script>
        
        <!-- Unified NCKH Modules -->
        <script src="/js/nckh_danhsach/grid.js"></script>
        <script src="/js/nckh_danhsach/modal.js"></script>
        <script src="/js/nckh_danhsach/index.js"></script>
</body>

</html>
