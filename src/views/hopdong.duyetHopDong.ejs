      padding: 8px;
      text-align: left;
      border: 2px solid black;
    }

    .total-label {
      margin-left: auto;
      margin-right: 0;
      font-family: Arial, sans-serif;
      font-size: 16px;
      background-color: #f4f4f4;
      padding: 10px;
      border-radius: 8px;
      width: fit-content;
      display: block;
    }

    .total-label label {
      font-weight: bold;
      color: #000;
      margin-right: 8px;
      cursor: pointer;
      padding: 5px 10px;
      border: 1px solid #ccc;
      border-radius: 4px;
    }

    .total-label label,
    .total-label label span {
      background-color: #007bff;
      color: #fff;
    }

    .total-label span {
      font-weight: bold;
      color: #333;
    }    .btn {
      height: 45px !important;
    }

