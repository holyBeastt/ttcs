      // Export contract data
      function exportContractData() {
        const dot = $('#combobox-dot').val();
        const ki = $('#comboboxki').val();
        const namHoc = $('#NamHoc').val();

        if (!dot || !ki || !namHoc) {
          showError('Vui lòng chọn điều kiện lọc trước khi xuất dữ liệu');
