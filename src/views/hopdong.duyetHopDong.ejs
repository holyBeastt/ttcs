    }

    .table-responsive {
      font-size: 12px;
    }

    .over-f {
      overflow-x: auto;
      max-width: 100vw;
    }

    .table-dark th {
      background-color: #343a40;
      color: white;
    }

    .d_none {
      display: none;
    }

    /* Modal fixes to ensure proper closing behavior */
    .modal-backdrop {
      z-index: 1040;
    }

    .modal {
      z-index: 1050;
    }

