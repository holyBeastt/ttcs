          maPhongBan: $('#MaPhongBan').val() || '',
          loaiHopDong: $('#loaiHopDong').val() || ''
        });

        // Open export URL in new window
        window.open(`/api/export-duyet-hop-dong?${params.toString()}`, '_blank');
