    <script>
      function formatDate(dateString) {
        const date = new Date(dateString);
        const day = String(date.getDate()).padStart(2, "0");
        const month = String(date.getMonth() + 1).padStart(2, "0");
        const year = date.getFullYear();
        return `${day}/${month}/${year}`;
      }

      function formatHours(text) {
        if (typeof text !== "string") return text;
        const match = text.match(/(\d+[\.,]?\d*)\s*giờ/);
        if (match) {
          const hours = parseFloat(match[1].replace(",", "."));
          return text.replace(match[1], hours.toFixed(2).replace(".", ","));
        }
        return text;
      }

      function formatDanhSachThanhVien(DanhSachThanhVien) {
        if (typeof DanhSachThanhVien !== "string" || !DanhSachThanhVien.trim()) {
          return "";
        }
        return DanhSachThanhVien.split(",")
          .map((member) => formatHours(member.trim()))
          .filter(Boolean)
          .join(", ");
      }

      function renderTable(data) {
        const tbody = document.getElementById("table-body");
        window.currentData = data;
        tbody.innerHTML = "";

        data.forEach((item) => {
          const row = createTableRow(item);
          tbody.appendChild(row);
        });
      }

      function createTableRow(item) {
        const row = document.createElement("tr");
        row.setAttribute("data-id", item.ID);
        row.innerHTML = `
    <td>${item.PhanLoai}</td>
    <td>${item.TenBangSangCheVaGiaiThuong}</td>
    <td>${formatDate(item.NgayQDCongNhan)}</td>
    <td>${item.SoQDCongNhan}</td>
    <td>${formatHours(item.TacGia)}</td>
    <td>${formatDanhSachThanhVien(item.DanhSachThanhVien)}</td>
  `;

        const editButton = document.createElement("button");
        editButton.textContent = "Sửa";
        editButton.classList.add("btn", "btn-edit");
        editButton.addEventListener("click", () => enableEditMode(row, item));

        const actionCell = document.createElement("td");
        actionCell.appendChild(editButton);
        row.appendChild(actionCell);
        return row;
      }

      function enableEditMode(row, item) {
        const id = row.getAttribute("data-id");
        row.innerHTML = `
    <td><input type="text" value="${item.PhanLoai}" class="phanloai-${id}"></td>
    <td><input type="text" value="${item.TenBangSangCheVaGiaiThuong}" class="ten-${id}"></td>
    <td><input type="text" value="${formatDate(item.NgayQDCongNhan)}" class="ngay-${id}"></td>
    <td><input type="text" value="${item.SoQDCongNhan}" class="soqd-${id}"></td>
    <td><input type="text" value="${formatHours(item.TacGia)}" class="tacgia-${id}"></td>
    <td><input type="text" value="${formatDanhSachThanhVien(item.DanhSachThanhVien)}" class="thanhvien-${id}"></td>
  `;

        const saveButton = document.createElement("button");
        saveButton.textContent = "Lưu";
        saveButton.classList.add("btn", "btn-save");
        saveButton.addEventListener("click", () => saveData(id));

        const cancelButton = document.createElement("button");
        cancelButton.textContent = "Hủy";
        cancelButton.classList.add("btn", "btn-cancel");
        cancelButton.addEventListener("click", () => row.replaceWith(createTableRow(item)));

        const actionCell = document.createElement("td");
        actionCell.appendChild(saveButton);
        actionCell.appendChild(cancelButton);
        row.appendChild(actionCell);
      }

      function convertDMYtoISO(dateString) {
        const parts = dateString.split("/");
        if (parts.length !== 3) return null;
        const [day, month, year] = parts.map(Number);
        const date = new Date(Date.UTC(year, month - 1, day));
        return date.toISOString();
      }

      function saveData(id) {
        const updatedData = {
          PhanLoai: document.querySelector(`.phanloai-${id}`).value,
          TenBangSangCheVaGiaiThuong: document.querySelector(`.ten-${id}`).value,
          NgayQDCongNhan: convertDMYtoISO(document.querySelector(`.ngay-${id}`).value),
          SoQDCongNhan: document.querySelector(`.soqd-${id}`).value,
          TacGia: document.querySelector(`.tacgia-${id}`).value,
          DanhSachThanhVien: document.querySelector(`.thanhvien-${id}`).value
        };

        fetch(`/nckh/edit/${id}/bangsangchevagiaithuong`, {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(updatedData)
        })
          .then(response => response.json())
          .then(() => {
            alert("Dữ liệu đã được cập nhật thành công!");
          })
          .catch(error => console.error("Lỗi khi cập nhật dữ liệu:", error));
      }

      async function getData() {
        const year = document.getElementById("namHocXem").value;
        const department = document.getElementById("MaPhongBanView").value;
        const url = `/bangsangchevagiaithuong/${year}/${department}`;

        fetch(url)
          .then(response => response.json())
          .then(data => renderTable(data))
          .catch(error => console.error("Lỗi khi lấy dữ liệu:", error));
      }

    </script>

