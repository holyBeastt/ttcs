    <script>
      var table;

      // Khi nhấn nút render, lấy dữ liệu theo năm và phòng ban
      document.getElementById("render").addEventListener("click", async function () {
        const year = document.getElementById("namHocXem").value;
        // const department = document.getElementById("MaPhongBanView").value;
        let department;
        if (localStorage.getItem("MaPhongBan") == "DAOTAO" || localStorage.getItem("MaPhongBan") == "KHCN&HTPT") {
          department = "ALL";
        } else {
          department = localStorage.getItem("MaPhongBan");
        };
        const url = `/bangsangchevagiaithuong/${year}/${department}`;

        try {
          const response = await fetch(url);
          const data = await response.json();

          // Lấy thông tin quyền từ localStorage (nếu đã lưu)
          const userRole = localStorage.getItem("userRole");
          const userPhongBan = localStorage.getItem("MaPhongBan");

          let columns;

          // Cấp quyền sửa
          if (userRole === "GV" || userRole === "Thường") {
            columns = [
              {
                title: "Phân Loại",
                field: "PhanLoai",
                editor: "false",
              },
              {
                title: "Tên Bảng Sáng Chế Và Giải Thưởng",
                field: "TenBangSangCheVaGiaiThuong",
                editor: "false",
              },
              {
                title: "Ngày QĐ Công Nhận",
                field: "NgayQDCongNhan",
                editor: "false",
                formatter: "datetime",
                formatterParams: {
                  inputFormat: "iso",
                  outputFormat: "dd/MM/yyyy",
                },
              },
              {
                title: "Số QĐ Công Nhận",
                field: "SoQDCongNhan",
                editor: "false",
              },
              {
                title: "Tác Giả",
                field: "TacGia",
                editor: "false",
              },
              {
                title: "Danh Sách Thành Viên",
                field: "DanhSachThanhVien",
                editor: "false",
              }
            ];
          } else {
            columns = [
              {
                title: "Phân Loại",
                field: "PhanLoai",
                editor: "input",
                editable: cell => cell.getRow().getData().DaoTaoDuyet != 1,
              },
              {
                title: "Tên Bảng Sáng Chế Và Giải Thưởng",
                field: "TenBangSangCheVaGiaiThuong",
                editor: "input",
                editable: cell => cell.getRow().getData().DaoTaoDuyet != 1,
              },
              {
                title: "Ngày QĐ Công Nhận",
                field: "NgayQDCongNhan",
                editor: customDateEditor,
                formatter: "datetime",
                formatterParams: {
                  inputFormat: "iso",
                  outputFormat: "MM/dd/yyyy"
                },
                editable: cell => cell.getRow().getData().DaoTaoDuyet != 1,
              },
              {
                title: "Số QĐ Công Nhận",
                field: "SoQDCongNhan",
                editor: "input",
                editable: cell => cell.getRow().getData().DaoTaoDuyet != 1,
              },
              {
                title: "Tác Giả",
                field: "TacGia",
                editor: "input",
                editable: cell => cell.getRow().getData().DaoTaoDuyet != 1,
              },
              {
                title: "Danh Sách Thành Viên",
                field: "DanhSachThanhVien",
                editor: "input",
                editable: cell => cell.getRow().getData().DaoTaoDuyet != 1,
              }
            ];
          }

          // Nếu khoa == ALL thì thêm cột "Khoa"
          if (department == "ALL") {
            columns.push({
              title: "Khoa",
              field: "Khoa",
              editor: (userRole === "GV" || userRole === "Thường") ? "false" : "input",
              editable: cell => cell.getRow().getData().DaoTaoDuyet != 1,
            });
          }

          // Cấp quyền xóa: chỉ hiển thị cột "Hành Động" nếu tài khoản thuộc các nhóm được phép
          if (userRole === "Duyệt" && MaPhongBan == "DAOTAO" || userRole === "GV_CNBM" || userRole === "Lãnh đạo khoa") {
            columns.push({
              title: "Hành Động",
              field: "actions",
              formatter: actionFormatter,
              hozAlign: "center",
              headerSort: false,
            });
          }

          // Cấp quyền duyệt: chỉ thêm cột "Duyệt" nếu tài khoản có quyền Duyệt
          if (userRole === "Duyệt" && MaPhongBan == "DAOTAO") {
            columns.push({
              title: "Duyệt",
              field: "DaoTaoDuyet",
              formatter: checkboxFormatter,
              editor: "tickCross",
              cellClick: function (e, cell) {
                // Cho phép chỉnh sửa nếu dòng chưa được duyệt
                cell.edit();
              },
            });
          }


          // Khởi tạo bảng Tabulator
          table = new Tabulator("#table-container", {
            data: data,
            index: "ID",
            layout: "fitColumns",
            columns: columns
          });

          // Sau khi chỉnh sửa ô, cập nhật dữ liệu
          table.on("cellEdited", async function (cell) {
            const field = cell.getField();
            const row = cell.getRow();
            let updatedData = row.getData();

            // Nếu chỉnh sửa trường ngày, chuyển từ dd/MM/yyyy sang ISO
            if (field === "NgayQDCongNhan" && updatedData.NgayQDCongNhan) {
              const isoDate = convertDMYtoISO(updatedData.NgayQDCongNhan);
              if (isoDate) updatedData.NgayQDCongNhan = isoDate;
            }
            // Nếu chỉnh sửa checkbox Duyệt, chuyển đổi giá trị (false -> 1, true -> 0)
            if (field === "DaoTaoDuyet") {
              updatedData.DaoTaoDuyet = updatedData.DaoTaoDuyet == false ? 1 : 0;
            }
            await saveData(updatedData.ID, updatedData, row);
          });
        } catch (error) {
          console.error("Lỗi khi lấy dữ liệu:", error);
        }
      });

      // Hàm tạo custom editor cho Tabulator
      function customDateEditor(cell, onRendered, success, cancel, editorParams) {
        var cellValue = cell.getValue();
        var formattedValue = cellValue ? moment(cellValue).format("MM/DD/YYYY") : "";

        var input = document.createElement("input");
        input.setAttribute("type", "text");
        input.style.padding = "3px";
        input.style.width = "100%";
        input.style.boxSizing = "border-box";
        input.value = formattedValue;

        // Gọi flatpickr khi editor được render
        onRendered(function () {
          input.focus();
          flatpickr(input, {
            dateFormat: "m/d/Y",  // Định dạng mm/dd/yyyy
            defaultDate: formattedValue,
            allowInput: true,      // ✅ Cho phép nhập tay từ bàn phím
            clickOpens: true,      // Mở lịch khi click vào input
            onChange: function (selectedDates, dateStr) {
              success(selectedDates.length ? moment(selectedDates[0]).toISOString() : "");
            },
            onClose: function (selectedDates, dateStr) {
              if (!selectedDates.length) cancel();
            }
          });
        });

        return input;
      }

      // Formatter hiển thị checkbox cho cột Duyệt
      function checkboxFormatter(cell, formatterParams, onRendered) {
        let value = cell.getValue();
        let checked = (value == 1 || value == true) ? "checked" : "";
        return `<input type="checkbox" ${checked} />`;
      }

      // Formatter cho cột Hành Động (nút xóa)
      function actionFormatter(cell) {
        const rowData = cell.getRow().getData();
        // Nếu dòng đã duyệt (Duyet == 1) thì không hiển thị nút xóa
        if (rowData.DaoTaoDuyet == 1) {
          return "";
        }
        const id = rowData.ID;
        const button = document.createElement("button");
        button.innerHTML = "<i class='fas fa-trash-alt'></i>";
        button.classList.add("btn", "btn-delete");
        button.addEventListener("click", () => deleteRow(id, cell.getRow()));
        return button;
      }

      // Hàm cập nhật dữ liệu lên server
      async function saveData(id, updatedData, row) {
        // console.log(updatedData);
        const MaBang = 'bangsangchevagiaithuong';
        try {
          const response = await fetch(`/nckh/edit/${id}/${MaBang}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify(updatedData)
          });
          const result = await response.json();
          if (result.success) {
            Swal.fire({
              toast: true,
              position: 'top-end',
              icon: 'success',
              title: 'Thông báo',
              text: result.message,
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true
            });
            // Làm mới bảng sau khi cập nhật
            document.getElementById("render").click();
          } else {
            Swal.fire({
              toast: true,
              position: 'top-end',
              icon: 'error',
              title: 'Thất bại',
              text: result.message,
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true
            });
          }
        } catch (error) {
          console.error("Lỗi khi cập nhật dữ liệu:", error);
        }
      }

      // Hàm xóa dòng dữ liệu
      async function deleteRow(id, row) {
        try {
          const response = await fetch(`/nckh/delete/${id}/bangsangchevagiaithuong`, { method: "POST" });
          const result = await response.json();
          if (result.success) {
            Swal.fire({
              toast: true,
              position: 'top-end',
              icon: 'success',
              title: 'Thông báo',
              text: result.message,
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true
            });
            row.delete();
          } else {
            Swal.fire({
              toast: true,
              position: 'top-end',
              icon: 'error',
              title: 'Thất bại',
              text: result.message,
              showConfirmButton: false,
              timer: 3000,
              timerProgressBar: true
            });
          }
        } catch (error) {
          console.error("Lỗi khi xóa dữ liệu:", error);
        }
      }

      // Hàm chuyển đổi ngày từ định dạng dd/MM/yyyy sang ISO
      function convertDMYtoISO(dateString) {
        const parts = dateString.split("/");
        if (parts.length !== 3) return null;
        const [day, month, year] = parts.map(Number);
        return new Date(Date.UTC(year, month - 1, day)).toISOString();
      }
    </script>


