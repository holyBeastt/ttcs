          return;
        }

        const headersMap = {
          id: { name: "ID", width: 70 },
          major: { name: "Khoa", width: 100 },
          ll_code: {
            name: "CTƒêT",
            width: 0,
          },
          ll_total: { name: "LL", width: 50 },
          student_quantity: { name: "S·ªë SV", width: 70 },
          student_bonus: { name: "HS l·ªõp ƒë√¥ng", width: 100 },
          bonus_time: { name: "HS T7/CN", width: 90 },
          course_id: { name: "M√£ h·ªçc ph·∫ßn", width: 100 },
          lecturer: { name: "Gi·∫£ng vi√™n theo TKB", width: 150 },
          credit_hours: { name: "S·ªë TC", width: 80 },
          course_name: { name: "L·ªõp h·ªçc ph·∫ßn", width: 250 },
          course_code: { name: "M√£ h·ªçc ph·∫ßn", width: 100 },
          start_date: { name: "Ng√†y b·∫Øt ƒë·∫ßu", width: 110 },
          end_date: { name: "Ng√†y k·∫øt th√∫c", width: 110 },
          qc: { name: "QC", width: 70 },
          semester: { name: "NƒÉm h·ªçc", width: 100 },
        };

        let canEdit = false;

        if (role == "<%= APP_ROLES.troLy_phong %>" || role == "<%= APP_ROLES.lanhDao_phong %>") {
          canEdit = true;
        }

        const columnDefs = [
          {
            headerName: "STT",
            field: "stt",
            valueGetter: (params) => params.node.rowIndex + 1, // ƒê√°nh s·ªë th·ª© t·ª±
            width: 70,
            editable: false,
            cellStyle: { fontWeight: "bold", textAlign: "center" },
          },
          ...Object.keys(renderData[0])
            .filter((key) => key !== "GhiChu" && key !== "description")
            .map((key) => ({
              field: key,
              headerName: headersMap[key]?.name || key,
              width: headersMap[key]?.width || 100,
              editable: canEdit && key !== "student_bonus" && key !== "id",
              hide: key === "semester" || key === "id" || key === "tt" || key === "course_id" 
              || key === 'dot' || key === 'ki_hoc' || key === 'nam_hoc', // ·∫®n c·ªôt kh√¥ng c·∫ßn thi·∫øt
              headerClass: "custom-header",
              filter: key === "course_name" ? true : false, // ‚úÖ Ch·ªâ b·∫≠t filter cho c·ªôt course_name
              valueFormatter: (params) => {
                if (
                  params.colDef.field === "start_date" ||
                  params.colDef.field === "end_date"
                ) {
                  if (params.value) {
                    const date = new Date(params.value);
                    if (!isNaN(date)) {
                      return date.toLocaleDateString("vi-VN"); // Hi·ªÉn th·ªã ƒë√∫ng ƒë·ªãnh d·∫°ng dd/mm/yyyy
                    }
                  }
                }
                return params.value;
              },

              valueGetter: (params) => {
                if (
                  params.colDef.field === "start_date" ||
                  params.colDef.field === "end_date"
                ) {
                  const value = params.data[params.colDef.field];
                  if (value) {
                    const date = new Date(value);
                    if (!isNaN(date)) {
                      return date.toLocaleDateString("vi-VN"); // Gi·ªØ nguy√™n ƒë·ªãnh d·∫°ng khi click v√†o
                    }
                  }
                }
                return params.data[params.colDef.field];
              },
              valueSetter: (params) => {
                const field = params.colDef.field;
                const oldValue = params.data[field];
                const value = params.newValue ? params.newValue.trim() : "";

                // ‚úÖ X·ª≠ l√Ω ri√™ng cho c·ªôt "start_date" v√† "end_date"
                if (field === "start_date" || field === "end_date") {
                  if (!value) return false; // Kh√¥ng c·∫≠p nh·∫≠t n·∫øu gi√° tr·ªã r·ªóng

                  const parts = value.split("/");
                  if (parts.length === 3) {
                    const formattedDate = `${parts[2]}-${parts[1]}-${parts[0]}`;
                    const date = new Date(formattedDate);

                    if (!isNaN(date)) {
                      params.data[field] = value; // L∆∞u gi√° tr·ªã m·ªõi
                      return true;
                    }
                  }

                  params.data[field] = oldValue; // Gi·ªØ nguy√™n gi√° tr·ªã c≈© n·∫øu sai ƒë·ªãnh d·∫°ng
                  return false;
                }

                // ‚úÖ X·ª≠ l√Ω c√°c c·ªôt kh√°c (n·∫øu c√≥)
                if (value !== oldValue) {
                  params.data[field] = value; // L∆∞u gi√° tr·ªã m·ªõi
                  return true;
                }

                return false; // Kh√¥ng c·∫≠p nh·∫≠t n·∫øu kh√¥ng thay ƒë·ªïi
              },

              cellEditor: "agTextCellEditor",
              cellEditorParams: {
                useFormatter: true, // Gi·ªØ nguy√™n ƒë·ªãnh d·∫°ng khi ch·ªânh s·ª≠a
              },
            })),
        ];
        // Th√™m c·ªôt "H√†nh ƒë·ªông" n·∫øu role l√† "<%= APP_ROLES.troLy_phong %>" ho·∫∑c "<%= APP_ROLES.lanhDao_phong %>"
        if (role === "<%= APP_ROLES.troLy_phong %>" || role === "<%= APP_ROLES.lanhDao_phong %>") {
          columnDefs.push({
            headerName: "X√≥a",
            field: "actions",
            editable: false,
            width: 60,
            cellRenderer: (params) => {
              const id = params.data.id; // L·∫•y ID t·ª´ d·ªØ li·ªáu
              const tt = params.data.tt; // L·∫•y gi√° tr·ªã `tt` t·ª´ d·ªØ li·ªáu
              const dot = params.data.dot; // L·∫•y gi√° tr·ªã `dot` t·ª´ d·ªØ li·ªáu
              const ki_hoc = params.data.ki_hoc; // L·∫•y gi√° tr·ªã `ki_hoc` t·ª´ d·ªØ li·ªáu
              const nam_hoc = params.data.nam_hoc; // L·∫•y gi√° tr·ªã `nam_hoc` t·ª´ d·ªØ li·ªáu
              const stt = params.node.rowIndex + 1; // L·∫•y STT c·ªßa d√≤ng
              return `<button onclick="deleteRow('${id}', '${tt}', '${dot}', '${ki_hoc}', '${nam_hoc}', ${stt})">X√≥a</button>`;
            },
          });
        }

        // X·ª≠ l√Ω khi √¥ ƒë∆∞·ª£c ch·ªânh s·ª≠a
        async function onCellValueChanged(event) {
          const { data, colDef, newValue } = event;
          const id = data.id;
          const tt = data.tt;
          const dot = data.dot;
          const ki_hoc = data.ki_hoc;
          const nam_hoc = data.nam_hoc;

          const field = colDef.field;

          try {
            const response = await fetch("/api/v1/tkb/update-row", {
              method: "POST",
              headers: { "Content-Type": "application/json" },
              body: JSON.stringify({ tt, dot, ki_hoc, nam_hoc, field, value: newValue, data }),
            });

            const updatedRow = await response.json();

            if (response.ok) {
              const rowNode = gridOptions.api.getRowNode(id);
              if (rowNode) {
                rowNode.setData(updatedRow);
              } else {
                console.error(
                  "‚ö†Ô∏è Kh√¥ng t√¨m th·∫•y d√≤ng ƒë·ªÉ c·∫≠p nh·∫≠t:",
                  updatedRow
                );
              }

              // ‚úÖ Hi·ªÉn th·ªã th√¥ng b√°o th√†nh c√¥ng
              Toastify({
                text: "‚úÖ C·∫≠p nh·∫≠t th√†nh c√¥ng!",
                duration: 1000, // Hi·ªÉn th·ªã trong 3 gi√¢y
                gravity: "top", // ƒê∆∞a th√¥ng b√°o l√™n tr√™n
                position: "right", // CƒÉn l·ªÅ b√™n ph·∫£i
                backgroundColor: "#4CAF50", // M√†u xanh l√° (th√†nh c√¥ng)
              }).showToast();
            } else {
              Swal.fire({
