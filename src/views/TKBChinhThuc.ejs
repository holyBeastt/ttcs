    <script>
      let isEditingStudentQuantity = false;

      function toggleEditStudentQuantity() {
        isEditingStudentQuantity = !isEditingStudentQuantity;

        if (isEditingStudentQuantity) {
          renderData.forEach((item) => {
            item.isEditing = true; // Đánh dấu đang chỉnh sửa
          });
        } else {
          // Lấy giá trị từ các input và cập nhật lại `student_quantity`
          /*
          document
            .querySelectorAll("input[name='input-sv-tkb']")
            .forEach((input) => {
              const id = input.id; 
              const value = input.value; 

              const rowData = renderData.find((item) => item.id == id);
              if (rowData) {
                rowData.student_quantity = Number(input.value); 
              }
            });
*/
          const rows = document.querySelectorAll("#data-table-body tr"); // Lấy tất cả các hàng (tr)
          const updatedData = Array.from(rows).map((row) => {
            const cells = row.getElementsByTagName("td"); // Lấy tất cả các ô (td) trong hàng
            return {
              id: cells[0]?.textContent.trim() || "", // Cột thứ 3
              ll_total: cells[7]?.textContent.trim() || "", // Cột thứ 4
              student_quantity: cells[9]?.querySelector("input")?.value || "", // Giá trị input ở cột thứ 10
              bonus_time: cells[11]?.textContent.trim() || "",
            };
          });

          // Kiểm tra xem updatedData có dữ liệu không
          if (updatedData.length === 0) {
            Swal.fire({
              title: "Thông báo",
              html: "Không có dữ liệu để cập nhật",
              icon: "info",
              confirmButtonText: "OK",
              width: "auto", // Tự động điều chỉnh chiều rộng
              padding: "20px", // Giữ khoảng cách cho nội dung
            });

            return;
          }

          // Sử dụng fetch để gửi dữ liệu lên server
          fetch("/api/save-student-quantity", {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
            },
            body: JSON.stringify(updatedData),
          })
            .then((response) => response.json())
            .then((data) => {
              if (data.success) {
                Swal.fire({
                  title: "Thông báo",
                  html: "Lưu thành công",
                  icon: "success",
                  confirmButtonText: "OK",
                  width: "auto", // Tự động điều chỉnh chiều rộng
                  padding: "20px", // Giữ khoảng cách cho nội dung
                });
              } else {
                // Hiển thị chi tiết lỗi
                const errorMessages = data.errors
                  ? data.errors.join("<br>") // Gộp các lỗi thành chuỗi HTML
                  : data.message || "Có lỗi xảy ra.";

                Swal.fire({
                  title: "Lỗi!",
                  html: `<p>${errorMessages}</p>`,
                  icon: "error",
                  confirmButtonText: "OK",
                  width: "auto",
                  padding: "20px",
                });
              }
            })
            .catch((error) => {
              console.error("Lỗi gọi API:", error);
              alert("Có lỗi xảy ra khi gọi API.");
            });

          // Xóa trạng thái chỉnh sửa
          renderData.forEach((item) => delete item.isEditing);
        }

        document.getElementById("edit-student-quantity-btn").innerText =
          isEditingStudentQuantity ? "Lưu số lượng SV" : "Sửa số lượng SV";

        renderTable(); // Cập nhật lại bảng
      }

      function handleKeyDown(event, rowIndex) {
        // Kiểm tra nếu là phím mũi tên lên hoặc xuống
        if (event.key === "ArrowDown" || event.key === "ArrowUp") {
          event.preventDefault(); // Ngừng hành động mặc định (không thay đổi giá trị)

          const tableRows = document.querySelectorAll("#data-table-body tr");
          let nextIndex = rowIndex;

          // Tính chỉ số dòng tiếp theo
          if (event.key === "ArrowDown") {
            nextIndex = rowIndex + 1;
          } else if (event.key === "ArrowUp") {
            nextIndex = rowIndex - 1;
          }

          // Đảm bảo chỉ số dòng tiếp theo hợp lệ
          if (nextIndex >= 0 && nextIndex < tableRows.length) {
            // Lấy ô input trong dòng tiếp theo
            const nextInput = tableRows[nextIndex].querySelector(
              `td:nth-child(${
                Object.keys(renderData[0]).indexOf("student_quantity") + 1
              }) input`
            );

            // Nếu ô input tồn tại, di chuyển con trỏ vào ô input của dòng tiếp theo
            if (nextInput) {
              nextInput.focus();
            }
          }
        }
      }
